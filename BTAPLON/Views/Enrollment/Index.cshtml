@model IEnumerable<BTAPLON.Models.Enrollment>
@{
    ViewData["Title"] = "Quản lý ghi danh";
    var searchTerm = ViewData["SearchTerm"] as string ?? string.Empty;
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h1 class="h3 mb-0">Danh sách ghi danh</h1>
    <a class="btn btn-primary" asp-action="Create"><i class="bi bi-plus-lg me-1"></i>Thêm ghi danh</a>
</div>

<form method="get" asp-action="Index" class="mb-3">
    <div class="input-group">
        <input type="search" name="searchTerm" value="@searchTerm" class="form-control" placeholder="Tìm kiếm theo lớp học, học viên..." />
        @if (!string.IsNullOrWhiteSpace(searchTerm))
        {
            <a asp-action="Index" class="btn btn-outline-secondary">Xóa</a>
        }
        <button type="submit" class="btn btn-primary"><i class="bi bi-search me-1"></i>Tìm kiếm</button>
    </div>
</form>

<div class="table-responsive">
    <table class="table table-bordered table-striped align-middle">
        <thead class="table-light">
            <tr>
                <th style="width: 80px">Mã</th>
                <th>Lớp</th>
                <th>Học viên</th>
                <th style="width: 200px">Ngày ghi danh</th>
                <th style="width: 180px" class="text-center">Thao tác</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.EnrollmentID</td>
                    <td>
                        @item.Class?.ClassCode
                        <div class="text-muted small">@item.Class?.Course?.CourseName</div>
                    </td>
                    <td>@item.Student?.FullName</td>
                    <td>@item.EnrolledAt.ToString("dd/MM/yyyy HH:mm")</td>
                    <td class="text-center">
                        <a asp-action="Edit" asp-route-id="@item.EnrollmentID" class="btn btn-outline-secondary btn-sm">
                            <i class="bi bi-pencil-square me-1"></i>Sửa
                        </a>
                        <form asp-action="Delete" asp-route-id="@item.EnrollmentID" method="post" class="d-inline">
                            @Html.AntiForgeryToken()
                            <button type="submit" class="btn btn-outline-danger btn-sm ms-1" onclick="return confirm('Xóa ghi danh này?');">
                                <i class="bi bi-trash me-1"></i>Xóa
                            </button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
