@model IEnumerable<BTAPLON.Models.Enrollment>

@{
    ViewData["Title"] = "Quản lý ghi danh";
    var searchTerm = ViewData["SearchTerm"] as string ?? string.Empty;
}

<!-- ICONS -->
<link rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />

<!-- PAGE HEADER (Giống Users + Courses) -->
<div class="dashboard-header mb-4 p-4 rounded-4 d-flex justify-content-between align-items-center">
    <div>
        <h1 class="fw-bold text-white mb-1">
            <i class="fa-solid fa-user-check me-2"></i>Quản lý ghi danh
        </h1>
        <p class="text-white-50 mb-0">Theo dõi và quản lý học viên trong từng lớp học.</p>
    </div>

    <a class="btn btn-light shadow-sm" asp-action="Create">
        <i class="fa-solid fa-plus me-2"></i>Thêm ghi danh
    </a>
</div>

<!-- SEARCH BAR -->
<div class="dashboard-card shadow-sm p-3 mb-3">
    <form method="get" asp-action="Index">
        <div class="input-group input-group-lg search-box">

            <span class="input-group-text bg-white border-end-0">
                <i class="fa-solid fa-search text-muted"></i>
            </span>

            <input type="search"
                   name="searchTerm"
                   value="@searchTerm"
                   class="form-control border-start-0"
                   placeholder="Tìm theo lớp học, khóa học hoặc học viên..." />

            @if (!string.IsNullOrWhiteSpace(searchTerm))
            {
                <a asp-action="Index" class="btn btn-outline-secondary">Xóa</a>
            }

            <button type="submit" class="btn btn-primary px-4">
                <i class="fa-solid fa-magnifying-glass me-2"></i>Tìm kiếm
            </button>
        </div>
    </form>
</div>

<!-- TABLE -->
<div class="dashboard-card shadow-sm p-3">
    <div class="table-responsive">

        <table class="table modern-table align-middle mb-0">
            <thead>
                <tr>
                    <th style="width: 80px">Mã</th>
                    <th>Lớp học</th>
                    <th>Học viên</th>
                    <th style="width: 180px">Ngày ghi danh</th>
                    <th class="text-center" style="width: 200px">Thao tác</th>
                </tr>
            </thead>

            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td class="fw-semibold">@item.EnrollmentID</td>

                        <!-- Lớp -->
                        <td>
                            <div class="fw-semibold">@item.Class?.ClassCode</div>
                            <div class="small text-muted">@item.Class?.Course?.CourseName</div>
                        </td>

                        <!-- Học viên -->
                        <td>
                            <div class="fw-semibold">@item.Student?.FullName</div>
                            <div class="small text-muted">@item.Student?.Email</div>
                        </td>

                        <!-- Ngày ghi danh -->
                        <td>@item.EnrolledAt.ToString("dd/MM/yyyy HH:mm")</td>

                        <!-- Actions -->
                        <td class="text-center">
                            <div class="d-flex justify-content-center gap-2 flex-wrap">

                                <a asp-action="Edit" asp-route-id="@item.EnrollmentID"
                                   class="btn btn-outline-primary btn-sm">
                                    <i class="fa-solid fa-pen-to-square"></i>
                                </a>

                                <form asp-action="Delete"
                                      asp-route-id="@item.EnrollmentID"
                                      method="post"
                                      class="d-inline">
                                    @Html.AntiForgeryToken()
                                    <button type="submit"
                                            onclick="return confirm('Bạn chắc chắn muốn xóa ghi danh này?');"
                                            class="btn btn-outline-danger btn-sm">
                                        <i class="fa-solid fa-trash"></i>
                                    </button>
                                </form>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>

        </table>

    </div>
</div>

<!-- SHARED DASHBOARD STYLE -->
<style>
    /* Header Gradient */
    .dashboard-header {
        background: linear-gradient(135deg, #fc5c7d, #6a82fb);
        color: white;
    }

    /* Dashboard Card */
    .dashboard-card {
        background: #fff;
        border-radius: 18px;
    }

    /* Search Box */
    .search-box input {
        border-left: none !important;
        box-shadow: none !important;
    }

        .search-box input:focus {
            border-color: #80bdff;
            box-shadow: 0 0 0 3px rgba(0,123,255,.25) !important;
        }

    /* Modern Table */
    .modern-table thead {
        background: #f1f3f5;
        border-top-left-radius: 12px;
        border-top-right-radius: 12px;
    }

    .modern-table th {
        font-weight: 600;
        text-transform: uppercase;
        font-size: .75rem;
        letter-spacing: .5px;
        color: #495057;
    }

    .modern-table tbody tr {
        transition: .2s;
    }

        .modern-table tbody tr:hover {
            background: #f8f9fa;
        }
</style>
