@model IEnumerable<BTAPLON.Models.Enrollment>

<div class="container mt-4">
    <h2 class="mb-3">Enrollment List</h2>

    <a class="btn btn-primary mb-3" href="/Enrollment/Create">Add Enrollment</a>

    <table class="table table-bordered table-striped">
        <thead class="table-dark text-center">
            <tr>
                <th>#</th>
                <th>Class</th>
                <th>Student</th>
                <th>Enrolled At</th>
                <th>Action</th>
            </tr>
        </thead>

        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.EnrollmentID</td>
                    <td>@item.Class?.ClassCode</td>
                    <td>@item.Student?.FullName</td>
                    <td>@item.EnrolledAt.ToString("dd/MM/yyyy HH:mm")</td>
                    <td>
                        <a href="/Enrollment/Edit/@item.EnrollmentID" class="btn btn-warning btn-sm">Edit</a>
                        <a class="btn btn-danger btn-sm" href="/Enrollment/Delete/@item.EnrollmentID"
                           onclick="return confirm('Delete?')">
                            Delete
                        </a>
                    </td>
                </tr>
            }
        </tbody>

    </table>
</div>
