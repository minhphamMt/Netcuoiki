@model BTAPLON.Models.Forum.DiscussionThread
@{
    var orderedPosts = (Model.Posts ?? new List<Post>())
        .OrderBy(p => p.CreatedAt)
        .ToList();

    ViewData["Title"] = Model.Title;

    string Avatar(string name)
    {
        if (string.IsNullOrWhiteSpace(name)) return "U";
        return name.Trim()[0].ToString().ToUpper();
    }
}

<link rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />

<!-- PAGE TITLE + BACK BUTTON -->
<h2 class="mb-4 d-flex align-items-center gap-3">

    <a asp-action="Index"
       asp-route-classId="@Model.ClassID"
       asp-route-courseId="@Model.CourseID"
       class="btn btn-outline-secondary btn-sm rounded-pill shadow-sm">
        <i class="fa-solid fa-arrow-left"></i>
    </a>

    <span>
        <i class="fa-solid fa-comments text-primary me-2"></i>@Model.Title
    </span>
</h2>

<!-- BADGES -->
<div class="mb-4 d-flex flex-wrap gap-2">
    @if (Model.Course != null)
    {
        <span class="badge bg-primary rounded-pill px-3 py-2">
            <i class="fa-solid fa-book-open me-1"></i>@Model.Course.CourseName
        </span>
    }
    @if (Model.Class != null)
    {
        <span class="badge bg-info text-dark rounded-pill px-3 py-2">
            <i class="fa-solid fa-school me-1"></i>@Model.Class.ClassCode
        </span>
    }

    <span class="badge bg-light text-dark rounded-pill px-3 py-2">
        <i class="fa-solid fa-user me-1"></i>Tạo bởi: @Model.CreatedBy?.FullName
    </span>
</div>

<!-- ===================== POSTS LIST ======================= -->
<div class="card shadow-sm mb-4 border-0 rounded-4">
    <div class="card-header bg-light fw-bold rounded-top-4">
        <i class="fa-solid fa-messages me-1 text-primary"></i>@orderedPosts.Count bài viết
    </div>

    <div class="list-group list-group-flush">
        @foreach (var post in orderedPosts)
        {
            <div class="list-group-item py-4">

                <!-- Header -->
                <div class="d-flex justify-content-between align-items-start">

                    <div class="d-flex align-items-center">
                        <div class="rounded-circle bg-primary text-white fw-bold d-flex justify-content-center align-items-center me-3"
                             style="width:45px; height:45px; font-size:18px;">
                            @Avatar(post.Author?.FullName)
                        </div>

                        <div>
                            <strong>@post.Author?.FullName</strong>
                            <div class="small text-muted">
                                <i class="fa-solid fa-clock me-1"></i>
                                @post.CreatedAt.ToLocalTime().ToString("dd/MM/yyyy HH:mm")
                            </div>
                        </div>
                    </div>

                    @if (post.IsPinned)
                    {
                        <span class="badge bg-success rounded-pill px-3">
                            <i class="fa-solid fa-thumbtack me-1"></i>Ghim
                        </span>
                    }
                </div>

                <!-- Content -->
                <p class="mt-3 mb-0 fs-6">@post.Content</p>
            </div>
        }
    </div>
</div>

@if (TempData["ReplyError"] != null)
{
    <div class="alert alert-danger shadow-sm rounded-pill px-3">@TempData["ReplyError"]</div>
}

<!-- ====================== REPLY FORM ======================== -->
@if (Model.IsLocked)
{
    <div class="alert alert-warning rounded-3 shadow-sm">
        <i class="fa-solid fa-lock me-1"></i>Chủ đề đã bị khóa, không thể thêm phản hồi mới.
    </div>
}
else
{
    <div class="card shadow-sm border-0 rounded-4">
        <div class="card-header bg-light fw-bold rounded-top-4">
            <i class="fa-solid fa-reply me-1 text-primary"></i>Trả lời chủ đề
        </div>

        <form asp-action="PostReply" method="post">
            @Html.AntiForgeryToken()

            <div class="card-body p-4">
                <input type="hidden" name="DiscussionThreadID" value="@Model.DiscussionThreadID" />

                <div class="mb-3">
                    <label class="form-label fw-semibold">Nội dung</label>
                    <textarea name="Content"
                          class="form-control rounded-3"
                          rows="4"
                          placeholder="Nhập phản hồi của bạn..."
                          required></textarea>
                </div>
            </div>

            <div class="card-footer bg-light text-end rounded-bottom-4 py-3">
                <button type="submit" class="btn btn-primary rounded-pill px-4">
                    <i class="fa-solid fa-paper-plane me-1"></i>Gửi trả lời
                </button>
            </div>
        </form>
    </div>
}
