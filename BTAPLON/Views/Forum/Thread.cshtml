@model BTAPLON.Models.Forum.DiscussionThread
@{
    var orderedPosts = (Model.Posts ?? new List<Post>()).OrderBy(p => p.CreatedAt).ToList();
    ViewData["Title"] = Model.Title;
}

<h2>@Model.Title</h2>

<div class="mb-3">
    @if (Model.Course != null)
    {
        <span class="badge bg-primary me-2">Khóa học: @Model.Course.CourseName</span>
    }
    @if (Model.Class != null)
    {
        <span class="badge bg-info">Lớp: @Model.Class.ClassCode</span>
    }
    <span class="badge bg-light text-dark">Tạo bởi: @Model.CreatedBy?.FullName ?? "N/A"</span>
</div>

<div class="list-group mb-4">
    @foreach (var post in orderedPosts)
    {
        <div class="list-group-item">
            <div class="d-flex justify-content-between align-items-start">
                <div>
                    <strong>@post.Author?.FullName ?? "Người dùng"</strong>
                    <div class="text-muted small">@post.CreatedAt.ToLocalTime().ToString("dd/MM/yyyy HH:mm")</div>
                </div>
                @if (post.IsPinned)
                {
                    <span class="badge bg-success">Nội dung mở đầu</span>
                }
            </div>
            <p class="mt-3 mb-0">@post.Content</p>
        </div>
    }
</div>

@if (TempData["ReplyError"] != null)
{
    <div class="alert alert-danger">@TempData["ReplyError"]</div>
}

@if (Model.IsLocked)
{
    <div class="alert alert-warning">Chủ đề đã bị khóa, không thể thêm phản hồi mới.</div>
}
else
{
    <div class="card">
        <div class="card-header">Trả lời chủ đề</div>
        <form asp-action="PostReply" method="post">
            @Html.AntiForgeryToken()
            <div class="card-body">
                <input type="hidden" name="DiscussionThreadID" value="@Model.DiscussionThreadID" />
                <div class="mb-3">
                    <label class="form-label">Nội dung</label>
                    <textarea name="Content" class="form-control" rows="4" required></textarea>
                </div>
            </div>
            <div class="card-footer text-end">
                <button type="submit" class="btn btn-primary">Gửi trả lời</button>
            </div>
        </form>
    </div>
}