@model ThreadCreateViewModel
@{
    var course = ViewBag.Course as Course;
    var cls = ViewBag.Class as Class;

    var title = "Tạo chủ đề mới";
    if (cls != null)
    {
        title += $" - Lớp {cls.ClassCode}";
    }
    else if (course != null)
    {
        title += $" - Khóa học {course.CourseName}";
    }
}

<link rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />

<!-- HEADER -->
<h2 class="mb-4 d-flex align-items-center gap-3">

    <!-- Nút quay lại kiểu mới (đồng bộ LMS UI) -->
    <a asp-action="Index"
       asp-route-courseId="@course?.CourseID"
       asp-route-classId="@cls?.ClassID"
       class="btn btn-outline-secondary btn-sm rounded-pill shadow-sm">
        <i class="fa-solid fa-arrow-left"></i>
    </a>

    <span>
        <i class="fa-solid fa-comments text-primary me-2"></i>@title
    </span>
</h2>


<div class="card shadow-sm border-0 rounded-4">
    <form asp-action="CreateThread" method="post">
        @Html.AntiForgeryToken()

        <div class="card-body p-4">

            <div asp-validation-summary="All" class="alert alert-danger p-2"></div>

            <!-- Title -->
            <div class="mb-3">
                <label asp-for="Title" class="form-label fw-semibold">
                    <i class="fa-solid fa-heading me-1 text-primary"></i>
                    Tiêu đề chủ đề
                </label>

                <input asp-for="Title"
                       class="form-control form-control-lg rounded-3"
                       placeholder="Nhập tiêu đề chủ đề..." />
                <span asp-validation-for="Title" class="text-danger small"></span>
            </div>

            <!-- Content -->
            <div class="mb-3">
                <label asp-for="Content" class="form-label fw-semibold">
                    <i class="fa-solid fa-align-left me-1 text-primary"></i>
                    Nội dung mở đầu
                </label>

                <textarea asp-for="Content"
                          rows="7"
                          class="form-control rounded-3"
                          placeholder="Viết nội dung, mô tả vấn đề hoặc ý kiến mở đầu..."></textarea>
                <span asp-validation-for="Content" class="text-danger small"></span>
            </div>

            <input type="hidden" asp-for="CourseID" />
            <input type="hidden" asp-for="ClassID" />
        </div>

        <!-- FOOTER ACTIONS -->
        <div class="card-footer bg-light d-flex justify-content-between py-3 rounded-bottom-4">
            <a class="btn btn-secondary rounded-pill px-4"
               asp-action="Index"
               asp-route-courseId="@course?.CourseID"
               asp-route-classId="@cls?.ClassID">
                <i class="fa-solid fa-arrow-left me-1"></i>Quay lại
            </a>

            <button type="submit" class="btn btn-primary rounded-pill px-4">
                <i class="fa-solid fa-paper-plane me-1"></i>Tạo chủ đề
            </button>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
