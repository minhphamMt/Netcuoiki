@model BTAPLON.Models.Forum.ForumQuestion
@{
    ViewData["Title"] = Model.Title;
    var orderedAnswers = (Model.Answers ?? new List<Answer>()).OrderBy(a => a.CreatedAt).ToList();
    var canMarkAnswers = (bool?)ViewBag.CanMarkAnswers ?? false;

    string Avatar(string name)
    {
        if (string.IsNullOrWhiteSpace(name)) return "U";
        return name.Trim()[0].ToString().ToUpper();
    }
}

<link rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />

<!-- PAGE HEADER -->
<h2 class="mb-4 d-flex align-items-center gap-3">

    <!-- Nút quay lại kiểu LMS -->
    <a asp-action="Index"
       asp-route-classId="@Model.ClassID"
       asp-route-courseId="@Model.CourseID"
       class="btn btn-outline-secondary btn-sm rounded-pill shadow-sm">
        <i class="fa-solid fa-arrow-left"></i>
    </a>

    <span>
        <i class="fa-solid fa-circle-question text-primary me-2"></i>@Model.Title
    </span>
</h2>

<!-- BADGES -->
<div class="mb-4 d-flex flex-wrap gap-2">
    @if (Model.Course != null)
    {
        <span class="badge bg-primary rounded-pill px-3 py-2">
            <i class="fa-solid fa-book-open me-1"></i>Khóa học: @Model.Course.CourseName
        </span>
    }
    @if (Model.Class != null)
    {
        <span class="badge bg-info text-dark rounded-pill px-3 py-2">
            <i class="fa-solid fa-school me-1"></i>Lớp: @Model.Class.ClassCode
        </span>
    }

    <span class="badge bg-light text-dark rounded-pill px-3 py-2">
        <i class="fa-solid fa-user me-1"></i>Hỏi bởi: @Model.Student?.FullName
    </span>
</div>

<!-- ===================== QUESTION CARD ======================= -->
<div class="card shadow-sm mb-4 border-0 rounded-4">
    <div class="card-header d-flex justify-content-between align-items-center bg-light rounded-top-4">
        <span class="fw-bold">
            <i class="fa-solid fa-comment-dots me-2 text-primary"></i>Nội dung câu hỏi
        </span>

        @if (Model.IsResolved)
        {
            <span class="badge bg-success rounded-pill px-3">
                <i class="fa-solid fa-check-circle me-1"></i>Đã giải quyết
            </span>
        }
        else
        {
            <span class="badge bg-warning text-dark rounded-pill px-3">
                <i class="fa-solid fa-hourglass-half me-1"></i>Đang mở
            </span>
        }
    </div>

    <div class="card-body p-4">
        <p class="fs-5 mb-3">@Model.Body</p>

        <small class="text-muted">
            <i class="fa-solid fa-clock me-1"></i>
            @Model.CreatedAt.ToLocalTime().ToString("dd/MM/yyyy HH:mm")
        </small>
    </div>
</div>

@if (TempData["AnswerError"] != null)
{
    <div class="alert alert-danger shadow-sm rounded-pill px-3">@TempData["AnswerError"]</div>
}

<!-- ===================== ANSWERS LIST ======================= -->
<div class="card shadow-sm mb-4 border-0 rounded-4">
    <div class="card-header bg-light fw-bold rounded-top-4">
        <i class="fa-solid fa-reply me-1 text-primary"></i>@orderedAnswers.Count câu trả lời
    </div>

    <div class="list-group list-group-flush">
        @if (!orderedAnswers.Any())
        {
            <div class="list-group-item text-muted fst-italic py-3">
                Chưa có câu trả lời nào.
            </div>
        }
        else
        {
            foreach (var answer in orderedAnswers)
            {
                <div class="list-group-item py-4">
                    <div class="d-flex justify-content-between">

                        <!-- Avatar + tên -->
                        <div class="d-flex align-items-center">
                            <div class="avatar rounded-circle bg-primary text-white fw-bold d-flex
                                                justify-content-center align-items-center me-3"
                                 style="width:45px; height:45px; font-size:18px;">
                                @Avatar(answer.Author?.FullName)
                            </div>

                            <div>
                                <strong>@answer.Author?.FullName</strong>
                                <div class="small text-muted">
                                    <i class="fa-solid fa-clock me-1"></i>
                                    @answer.CreatedAt.ToLocalTime().ToString("dd/MM/yyyy HH:mm")
                                </div>
                            </div>
                        </div>

                        <!-- Accepted Badge -->
                        <div>
                            @if (answer.IsAccepted)
                            {
                                <span class="badge bg-success rounded-pill px-3">
                                    <i class="fa-solid fa-check me-1"></i>Câu trả lời hay
                                </span>
                            }
                            else if (canMarkAnswers)
                            {
                                <form asp-action="MarkAnswer" method="post" class="d-inline">
                                    @Html.AntiForgeryToken()
                                    <input type="hidden" name="id" value="@answer.AnswerID" />
                                    <button type="submit"
                                            class="btn btn-outline-success btn-sm rounded-pill">
                                        <i class="fa-solid fa-thumbs-up me-1"></i>Đánh dấu hay
                                    </button>
                                </form>
                            }
                        </div>
                    </div>

                    <p class="mt-3 mb-0">@answer.Content</p>
                </div>
            }
        }
    </div>
</div>

<!-- ===================== POST ANSWER ======================= -->
<div class="card shadow-sm border-0 rounded-4">
    <div class="card-header bg-light fw-bold rounded-top-4">
        <i class="fa-solid fa-pen-to-square me-1 text-primary"></i>Trả lời câu hỏi
    </div>

    <form asp-action="PostAnswer" method="post">
        @Html.AntiForgeryToken()
        <div class="card-body p-4">
            <input type="hidden" name="QuestionID" value="@Model.QuestionID" />

            <div class="mb-3">
                <label class="form-label fw-bold">Nội dung câu trả lời</label>
                <textarea name="Content" class="form-control rounded-3" rows="4" required></textarea>
            </div>
        </div>

        <div class="card-footer bg-light text-end rounded-bottom-4 py-3">
            <button type="submit" class="btn btn-primary rounded-pill px-4">
                <i class="fa-solid fa-paper-plane me-1"></i>Gửi trả lời
            </button>
        </div>
    </form>
</div>
