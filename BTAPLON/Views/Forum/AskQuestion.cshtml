@model QuestionCreateViewModel
@{
    var course = ViewBag.Course as Course;
    var cls = ViewBag.Class as Class;

    var title = "Đặt câu hỏi mới";
    if (cls != null)
    {
        title += $" - Lớp {cls.ClassCode}";
    }
    else if (course != null)
    {
        title += $" - Khóa học {course.CourseName}";
    }
}

<link rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />

<!-- HEADER -->
<h2 class="mb-4 d-flex align-items-center gap-3">

    <!-- Nút quay lại -->
    <a asp-action="Index"
       asp-route-courseId="@course?.CourseID"
       asp-route-classId="@cls?.ClassID"
       class="btn btn-outline-secondary btn-sm rounded-pill shadow-sm">
        <i class="fa-solid fa-arrow-left"></i>
    </a>

    <span>
        <i class="fa-solid fa-comments me-2 text-primary"></i>@title
    </span>
</h2>


<div class="card shadow-sm border-0">
    <form asp-action="AskQuestion" method="post">
        @Html.AntiForgeryToken()

        <div class="card-body p-4">

            <div asp-validation-summary="All" class="alert alert-danger p-2"></div>

            <div class="mb-3">
                <label asp-for="Title" class="form-label fw-semibold">
                    <i class="fa-solid fa-pen-to-square me-1 text-primary"></i>Tiêu đề câu hỏi
                </label>
                <input asp-for="Title" class="form-control form-control-lg" placeholder="Nhập tiêu đề ngắn gọn..." />
                <span asp-validation-for="Title" class="text-danger small"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Body" class="form-label fw-semibold">
                    <i class="fa-solid fa-align-left me-1 text-primary"></i>Nội dung chi tiết
                </label>
                <textarea asp-for="Body"
                          rows="7"
                          class="form-control"
                          placeholder="Mô tả vấn đề, thêm ví dụ hoặc hình ảnh (nếu có)..."></textarea>
                <span asp-validation-for="Body" class="text-danger small"></span>
            </div>

            <input type="hidden" asp-for="CourseID" />
            <input type="hidden" asp-for="ClassID" />

        </div>

        <div class="card-footer bg-light d-flex justify-content-between py-3">
            <a class="btn btn-secondary px-4"
               asp-action="Index"
               asp-route-courseId="@course?.CourseID"
               asp-route-classId="@cls?.ClassID">
                <i class="fa-solid fa-arrow-left me-1"></i>Quay lại
            </a>

            <button type="submit" class="btn btn-primary px-4">
                <i class="fa-solid fa-paper-plane me-1"></i>Gửi câu hỏi
            </button>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
