@{
    ViewData["Title"] = "Trang chủ hệ thống LMS";
    Layout = "_Layout"; // nếu bạn dùng layout chung
}

<div class="container mt-4">
    <!-- Banner -->
    <div class="p-5 mb-4 bg-light rounded-3 shadow-sm text-center"
         style="background: linear-gradient(135deg, #007bff 0%, #6610f2 100%); color: white;">
        <div class="container py-5">
            <h1 class="display-5 fw-bold">🎓 Hệ thống Quản lý Học tập</h1>
            <p class="col-lg-8 mx-auto fs-5">
                Nền tảng hỗ trợ giáo viên tạo bài kiểm tra, sinh viên làm bài và quản lý tiến độ học tập dễ dàng.
            </p>
            <a asp-controller="Account" asp-action="Login" class="btn btn-light btn-lg px-4 me-2">
                <i class="bi bi-box-arrow-in-right me-1"></i> Đăng nhập
            </a>
            <a asp-controller="Course" asp-action="Index" class="btn btn-outline-light btn-lg px-4">
                <i class="bi bi-book me-1"></i> Khóa học
            </a>
        </div>
    </div>

    <!-- Thống kê nhanh -->
    <div class="row text-center mb-5">
        <div class="col-md-4 mb-3">
            <div class="card border-0 shadow-sm py-4">
                <div class="card-body">
                    <i class="bi bi-people display-5 text-primary"></i>
                    <h5 class="mt-3">1,250+ Sinh viên</h5>
                    <p class="text-muted">Đang theo học các khóa trên hệ thống</p>
                </div>
            </div>
        </div>
        <div class="col-md-4 mb-3">
            <div class="card border-0 shadow-sm py-4">
                <div class="card-body">
                    <i class="bi bi-person-badge display-5 text-success"></i>
                    <h5 class="mt-3">45 Giảng viên</h5>
                    <p class="text-muted">Giảng dạy và quản lý môn học</p>
                </div>
            </div>
        </div>
        <div class="col-md-4 mb-3">
            <div class="card border-0 shadow-sm py-4">
                <div class="card-body">
                    <i class="bi bi-journal-bookmark display-5 text-warning"></i>
                    <h5 class="mt-3">320 Khóa học</h5>
                    <p class="text-muted">Được tổ chức trong hệ thống LMS</p>
                </div>
            </div>
        </div>
    </div>

    <!-- Danh sách khóa học nổi bật -->
    <h3 class="mb-4 text-primary fw-bold"><i class="bi bi-star-fill me-2"></i>Khóa học nổi bật</h3>
    <div class="row">
        <div class="col-md-4 mb-4">
            <div class="card h-100 shadow-sm">
                <img src="https://source.unsplash.com/400x250/?programming" class="card-img-top" alt="Course 1">
                <div class="card-body">
                    <h5 class="card-title">Lập trình C# cơ bản</h5>
                    <p class="card-text text-muted">Giảng viên: Nguyễn Văn A</p>
                    <a asp-controller="Course" asp-action="Details" asp-route-id="1" class="btn btn-outline-primary w-100">Xem chi tiết</a>
                </div>
            </div>
        </div>

        <div class="col-md-4 mb-4">
            <div class="card h-100 shadow-sm">
                <img src="https://source.unsplash.com/400x250/?design" class="card-img-top" alt="Course 2">
                <div class="card-body">
                    <h5 class="card-title">Thiết kế Web Frontend</h5>
                    <p class="card-text text-muted">Giảng viên: Trần Thị B</p>
                    <a asp-controller="Course" asp-action="Details" asp-route-id="2" class="btn btn-outline-primary w-100">Xem chi tiết</a>
                </div>
            </div>
        </div>

        <div class="col-md-4 mb-4">
            <div class="card h-100 shadow-sm">
                <img src="https://source.unsplash.com/400x250/?data" class="card-img-top" alt="Course 3">
                <div class="card-body">
                    <h5 class="card-title">Phân tích dữ liệu với SQL</h5>
                    <p class="card-text text-muted">Giảng viên: Lê Văn C</p>
                    <a asp-controller="Course" asp-action="Details" asp-route-id="3" class="btn btn-outline-primary w-100">Xem chi tiết</a>
                </div>
            </div>
        </div>
    </div>

    <!-- Phần liên hệ -->
    <div class="mt-5 text-center border-top pt-4">
        <h4>📞 Liên hệ hỗ trợ</h4>
        <p>Email: <a href="mailto:support@eduplatform.com">support@eduplatform.com</a> | Hotline: 0123 456 789</p>
    </div>
</div>

@section Scripts {
    <script>
        console.log("Trang Home LMS đã tải thành công!");
    </script>
}
