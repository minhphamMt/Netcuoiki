@model BTAPLON.Models.User
@{
    ViewData["Title"] = "Chỉnh sửa người dùng";
}

<h1 class="h3 mb-3">Chỉnh sửa thông tin người dùng</h1>

<form asp-action="EditUser" method="post" class="card p-4 shadow" style="max-width:500px">
    @Html.AntiForgeryToken()

    <input type="hidden" asp-for="UserID" />

    <div class="mb-3">
        <label class="form-label">Họ và tên</label>
        <input asp-for="FullName" class="form-control" />
        <span asp-validation-for="FullName" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label class="form-label">Email</label>
        <input asp-for="Email" class="form-control" />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label class="form-label">Mật khẩu</label>
        <input asp-for="PasswordHash" class="form-control" type="password" />
        <small class="form-text text-muted">Để trống nếu giữ nguyên mật khẩu hiện tại.</small>
        <span asp-validation-for="PasswordHash" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label class="form-label">Vai trò</label>
        <select asp-for="Role" class="form-select">
            <option value="Admin">Quản trị viên</option>
            <option value="Teacher">Giảng viên</option>
            <option value="Student">Học viên</option>
        </select>
        <span asp-validation-for="Role" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary"><i class="bi bi-check-circle me-1"></i>Lưu thay đổi</button>
    <a asp-action="Users" class="btn btn-secondary ms-2"><i class="bi bi-arrow-left me-1"></i>Quay lại</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
