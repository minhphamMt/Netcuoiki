@model BTAPLON.Models.User

@{
    ViewData["Title"] = "Thêm người dùng";
}

<h1 class="h3 mb-3">Thêm người dùng mới</h1>

<form method="post" class="card p-4 shadow" style="max-width:500px">
    @Html.AntiForgeryToken()
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="mb-3">
        <label class="form-label">Họ và tên</label>
        <input type="text" name="FullName" class="form-control" value="@Model?.FullName" required />
    </div>

    <div class="mb-3">
        <label class="form-label">Email</label>
        <input type="email" name="Email" class="form-control" value="@Model?.Email" required />
    </div>

    <div class="mb-3">
        <label class="form-label">Mật khẩu</label>
        <input type="password" name="PasswordHash" class="form-control" required />
    </div>

    <div class="mb-3">
        <label class="form-label">Vai trò</label>
        <select name="Role" class="form-select" required>
            <option value="">-- Chọn vai trò --</option>
            <option value="Admin" selected="@(Model?.Role == "Admin")">Quản trị viên</option>
            <option value="Teacher" selected="@(Model?.Role == "Teacher")">Giảng viên</option>
            <option value="Student" selected="@(Model?.Role == "Student")">Học viên</option>
        </select>
    </div>

    <button type="submit" class="btn btn-primary"><i class="bi bi-check-circle me-1"></i>Lưu</button>
    <a asp-action="Users" class="btn btn-secondary mt-1"><i class="bi bi-arrow-left me-1"></i>Quay lại</a>
</form>
