@model BTAPLON.Models.User

<h2 class="mb-3">Thêm User mới</h2>

<form method="post" class="card p-4 shadow" style="max-width:500px">
    <div class="mb-3">
        <label class="form-label">Full Name</label>
        <input type="text" name="FullName" class="form-control" required />
    </div>

    <div class="mb-3">
        <label class="form-label">Email</label>
        <input type="email" name="Email" class="form-control" required />
    </div>

    <div class="mb-3">
        <label class="form-label">Password</label>
        <input type="password" name="PasswordHash" class="form-control" required />
    </div>

    <div class="mb-3">
        <label class="form-label">Role</label>
        <select name="Role" class="form-select">
            <option value="Admin">Admin</option>
            <option value="Teacher">Teacher</option>
            <option value="Student">Student</option>
        </select>
    </div>

    <button type="submit" class="btn btn-primary">Save</button>
    <a asp-action="Users" class="btn btn-secondary ms-2">Cancel</a>
</form>
