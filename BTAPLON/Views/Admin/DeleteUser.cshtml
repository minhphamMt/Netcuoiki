@model BTAPLON.Models.User
@{
    ViewData["Title"] = "Delete User";
}

<h2>Delete User</h2>

<p>Are you sure you want to delete: <strong>@Model.FullName</strong> (@Model.Email)?</p>

<form asp-action="DeleteUser" method="post">
    <input type="hidden" asp-for="UserID" />
    <button type="submit">Yes, delete</button>
    <a asp-action="Users">Cancel</a>
</form>
