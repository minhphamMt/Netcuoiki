@model List<BTAPLON.Models.User>

@{
    ViewData["Title"] = "Quản lý người dùng";
    var searchTerm = ViewData["SearchTerm"] as string ?? string.Empty;
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h1 class="h3 mb-0">Danh sách người dùng</h1>
    <a class="btn btn-primary" asp-action="AddUser"><i class="bi bi-plus-lg me-1"></i>Thêm người dùng</a>
</div>

<form method="get" asp-action="Users" class="mb-3">
    <div class="input-group">
        <input type="search" name="searchTerm" value="@searchTerm" class="form-control" placeholder="Tìm kiếm theo tên, email hoặc vai trò..." />
        @if (!string.IsNullOrWhiteSpace(searchTerm))
        {
            <a asp-action="Users" class="btn btn-outline-secondary">Xóa</a>
        }
        <button type="submit" class="btn btn-primary"><i class="bi bi-search me-1"></i>Tìm kiếm</button>
    </div>
</form>

<table class="table table-bordered table-striped">
    <thead class="table-light">
        <tr>
            <th>Mã</th>
            <th>Họ và tên</th>
            <th>Email</th>
            <th>Vai trò</th>
            <th style="width: 180px" class="text-center">Thao tác</th>
        </tr>
    </thead>

    <tbody>
        @foreach (var u in Model)
        {
            <tr>
                <td>@u.UserID</td>
                <td>@u.FullName</td>
                <td>@u.Email</td>
                <td>
                    @switch (u.Role)
                    {
                        case "Admin":
                            @:Quản trị viên
                            break;
                        case "Teacher":
                            @:Giảng viên
                            break;
                        case "Student":
                            @:Học viên
                            break;
                        default:
                            @u.Role
                            break;
                    }
                </td>
                <td class="text-center">
                    <a class="btn btn-outline-primary btn-sm" asp-action="EditUser" asp-route-id="@u.UserID">
                        <i class="bi bi-pencil-square me-1"></i>Chỉnh sửa
                    </a>
                    <a class="btn btn-outline-danger btn-sm ms-1 mt-1" asp-action="DeleteUser" asp-route-id="@u.UserID">
                        <i class="bi bi-trash me-1"></i>Xóa
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
