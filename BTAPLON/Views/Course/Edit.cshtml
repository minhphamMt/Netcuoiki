@model BTAPLON.Models.Course

<h2>Sửa Khóa học</h2>

<form method="post">
    <input type="hidden" asp-for="CourseID" />

    <div class="form-group">
        <label>Tên khóa học</label>
        <input class="form-control" asp-for="CourseName" required />
    </div>

    <div class="form-group">
        <label>Giáo viên phụ trách</label>
        <select class="form-control" asp-for="TeacherID">
            <option value="">-- chọn giáo viên --</option>
            @foreach(var t in ViewBag.Teachers)
            {
                <option value="@t.UserID" selected="@(Model.TeacherID == t.UserID ? "selected" : null)">
                    @t.FullName
                </option>

            }
        </select>
    </div>

    <div class="form-group">
        <label>Mô tả</label>
        <textarea class="form-control" asp-for="Description"></textarea>
    </div>

    <br />

    <button type="submit" class="btn btn-success">Lưu</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
