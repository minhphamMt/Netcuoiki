@model IEnumerable<BTAPLON.Models.Course>

@{
    ViewData["Title"] = "Quản lý khóa học";
    var searchTerm = ViewData["SearchTerm"] as string ?? string.Empty;
}

<!-- PAGE HEADER (Đồng bộ với Quản lý người dùng) -->
<div class="dashboard-header mb-4 p-4 rounded-4 d-flex justify-content-between align-items-center">
    <div>
        <h1 class="fw-bold text-white mb-1">
            <i class="fa-solid fa-graduation-cap me-2"></i>Quản lý khóa học
        </h1>
        <p class="text-white-50 mb-0">Danh sách tất cả khóa học và giảng viên phụ trách.</p>
    </div>

    <a class="btn btn-light shadow-sm" asp-action="Create">
        <i class="fa-solid fa-plus me-2"></i>Thêm khóa học
    </a>
</div>

<!-- SEARCH BAR -->
<div class="dashboard-card shadow-sm p-3 mb-3">
    <form method="get" asp-action="Index">
        <div class="input-group input-group-lg search-box">
            <span class="input-group-text bg-white border-end-0">
                <i class="fa-solid fa-magnifying-glass"></i>
            </span>

            <input type="search"
                   class="form-control border-start-0"
                   name="searchTerm"
                   value="@searchTerm"
                   placeholder="Tìm kiếm khóa học hoặc giảng viên..." />

            @if (!string.IsNullOrWhiteSpace(searchTerm))
            {
                <a asp-action="Index" class="btn btn-outline-secondary">Xóa</a>
            }

            <button type="submit" class="btn btn-primary px-4">
                <i class="fa-solid fa-search me-2"></i>Tìm kiếm
            </button>
        </div>
    </form>
</div>

<!-- MAIN TABLE -->
<div class="dashboard-card shadow-sm p-3">
    <div class="table-responsive">
        <table class="table modern-table align-middle mb-0">
            <thead>
                <tr>
                    <th style="width:80px">Mã</th>
                    <th>Tên khóa học</th>
                    <th style="width:240px">Giáo viên phụ trách</th>
                    <th style="width:160px">Ngày tạo</th>
                    <th class="text-center" style="width: 240px">Thao tác</th>
                </tr>
            </thead>

            <tbody>
                @foreach (var c in Model)
                {
                    <tr>
                        <td class="fw-semibold">@c.CourseID</td>
                        <td>@c.CourseName</td>

                        <td>
                            @if (c.Teacher != null)
                            {
                                <div class="fw-semibold">@c.Teacher.FullName</div>
                                <div class="small text-muted">@c.Teacher.Email</div>
                            }
                            else
                            {
                                <span class="text-muted">Chưa gán</span>
                            }
                        </td>

                        <td>@c.CreatedAt.ToString("dd/MM/yyyy")</td>

                        <td class="text-center">
                            <div class="d-flex justify-content-center gap-2 flex-wrap">

                                <a class="btn btn-outline-primary btn-sm"
                                   asp-action="Edit" asp-route-id="@c.CourseID">
                                    <i class="fa-solid fa-pen-to-square"></i>
                                </a>

                                <a class="btn btn-outline-danger btn-sm"
                                   asp-action="Delete" asp-route-id="@c.CourseID">
                                    <i class="fa-solid fa-trash"></i>
                                </a>

                                <a class="btn btn-outline-info btn-sm"
                                   asp-controller="Forum" asp-action="Index" asp-route-courseId="@c.CourseID">
                                    <i class="fa-solid fa-comments"></i>
                                </a>

                            </div>
                        </td>
                    </tr>
                }
            </tbody>

        </table>
    </div>
</div>

<!-- CSS (Đồng bộ với Users Page) -->
<style>
    /* Header Gradient */
    .dashboard-header {
        background: linear-gradient(135deg, #fc5c7d, #6a82fb);
        color: white;
    }

    /* Dashboard Card */
    .dashboard-card {
        background: #fff;
        border-radius: 18px;
    }

    /* Search Box */
    .search-box input {
        border-left: none !important;
        box-shadow: none !important;
    }

        .search-box input:focus {
            border-color: #80bdff;
            box-shadow: 0 0 0 3px rgba(0,123,255,.25) !important;
        }

    /* Modern Table */
    .modern-table thead {
        background: #f1f3f5;
        border-top-left-radius: 12px;
        border-top-right-radius: 12px;
    }

    .modern-table th {
        font-weight: 600;
        text-transform: uppercase;
        font-size: .75rem;
        letter-spacing: .5px;
        color: #495057;
    }

    .modern-table tbody tr {
        transition: .2s;
    }

        .modern-table tbody tr:hover {
            background: #f8f9fa;
        }
</style>

