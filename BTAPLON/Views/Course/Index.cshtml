@model IEnumerable<BTAPLON.Models.Course>
@{
    ViewData["Title"] = "Quản lý khóa học";
    var searchTerm = ViewData["SearchTerm"] as string ?? string.Empty;
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h1 class="h3 mb-0">Danh sách khóa học</h1>
    <a class="btn btn-primary" asp-action="Create"><i class="bi bi-plus-lg me-1"></i>Thêm khóa học</a>
</div>

<form method="get" asp-action="Index" class="mb-3">
    <div class="input-group">
        <input type="search" name="searchTerm" value="@searchTerm" class="form-control" placeholder="Tìm kiếm theo tên khóa học, giảng viên..." />
        @if (!string.IsNullOrWhiteSpace(searchTerm))
        {
            <a asp-action="Index" class="btn btn-outline-secondary">Xóa</a>
        }
        <button type="submit" class="btn btn-primary"><i class="bi bi-search me-1"></i>Tìm kiếm</button>
    </div>
</form>

<div class="table-responsive">
    <table class="table table-bordered table-striped align-middle">
        <thead class="table-light">
            
            <tr>
                <th style="width: 120px">Mã</th>
                <th>Tên khóa học</th>
                <th style="width: 220px">GV phụ trách</th>
                <th style="width: 160px">Ngày tạo</th>
                <th style="width: 220px" class="text-center">Thao tác</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var c in Model)
            {
                <tr>
                    <td>@c.CourseID</td>
                    <td>@c.CourseName</td>
                    <td>@c.Teacher?.FullName</td>
                    <td>@c.CreatedAt.ToString("dd/MM/yyyy")</td>
                    <td class="text-center">
                        <div class="d-inline-flex flex-wrap justify-content-center gap-2">
                            <a class="btn btn-outline-secondary btn-sm" asp-action="Edit" asp-route-id="@c.CourseID">
                                <i class="bi bi-pencil-square me-1"></i>Sửa
                            </a>
                            <a class="btn btn-outline-danger btn-sm" asp-action="Delete" asp-route-id="@c.CourseID">
                                <i class="bi bi-trash me-1"></i>Xóa
                            </a>
                            <a class="btn btn-outline-info btn-sm" asp-controller="Forum" asp-action="Index" asp-route-courseId="@c.CourseID">
                                <i class="bi bi-chat-dots me-1"></i>Diễn đàn
                            </a>
                        </div>
                </tr>
            }
        </tbody>
    </table>
</div>
