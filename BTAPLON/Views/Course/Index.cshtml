@model IEnumerable<BTAPLON.Models.Course>

<h2>Danh sách khóa học</h2>

<p>
    <a class="btn btn-primary" href="/Course/Create">+ Thêm khóa học</a>
</p>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Mã</th>
            <th>Tên khóa học</th>
            <th>GV phụ trách</th>
            <th>Ngày tạo</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var c in Model)
        {
            <tr>
                <td>@c.CourseID</td>
                <td>@c.CourseName</td>
                <td>@c.Teacher?.FullName</td>
                <td>@c.CreatedAt.ToString("dd/MM/yyyy")</td>
                <td>
                    <a class="btn btn-sm btn-warning" href="/Course/Edit/@c.CourseID">Sửa</a>
                    <a class="btn btn-sm btn-danger" href="/Course/Delete/@c.CourseID">Xóa</a>
                </td>
            </tr>
        }
    </tbody>
</table>
