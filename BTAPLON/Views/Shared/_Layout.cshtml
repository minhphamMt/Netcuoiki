@using Microsoft.AspNetCore.Http
@using Microsoft.EntityFrameworkCore
@using System
@using System.Globalization
@using System.Linq
@using BTAPLON.Data
@inject EduDbContext DbContext
@{
    var currentController = ViewContext.RouteData.Values["controller"]?.ToString();
    var currentAction = ViewContext.RouteData.Values["action"]?.ToString();
    Func<string, string?, string> isActive = (controller, action) =>
        string.Equals(controller, currentController, StringComparison.OrdinalIgnoreCase) &&
        (string.IsNullOrEmpty(action) || string.Equals(action, currentAction, StringComparison.OrdinalIgnoreCase))
            ? "is-active"
            : string.Empty;

    var role = Context.Session.GetString("UserRole");
    var email = Context.Session.GetString("UserEmail");

    var displayRole = string.IsNullOrEmpty(role) ? "Khách" :
        role == "Admin" ? "Quản trị viên" :
        role == "Teacher" ? "Giảng viên" :
        role == "Student" ? "Học viên" : role;

    var pageTitle = ViewData["Title"] as string ?? "Bảng điều khiển";

    var unreadNotificationCount = 0;
    var sessionUserId = Context.Session.GetInt32("UserID");

    if (!string.IsNullOrEmpty(role) && sessionUserId.HasValue)
    {
        var notificationsQuery = DbContext.Notifications.AsNoTracking();

        if (role == "Teacher")
            notificationsQuery = notificationsQuery.Where(n => n.Class != null &&
                                                               n.Class.Course != null &&
                                                               n.Class.Course.TeacherID == sessionUserId.Value);
        else if (role == "Student")
            notificationsQuery = notificationsQuery.Where(n => n.Class != null &&
                                                               n.Class.Enrollments.Any(e => e.StudentID == sessionUserId.Value));
        else if (role != "Admin")
            notificationsQuery = notificationsQuery.Where(n => n.CreatedByID == sessionUserId.Value);

        var lastSeenRaw = Context.Session.GetString("NotificationsLastSeenAt");
        if (!string.IsNullOrWhiteSpace(lastSeenRaw) &&
            DateTime.TryParse(lastSeenRaw, CultureInfo.InvariantCulture, DateTimeStyles.AssumeUniversal | DateTimeStyles.AdjustToUniversal, out var lastSeenUtc))
        {
            notificationsQuery = notificationsQuery.Where(n => n.CreatedAt > lastSeenUtc);
        }

        unreadNotificationCount = await notificationsQuery.CountAsync();
    }

    var userInitials = "U";
    if (!string.IsNullOrEmpty(email))
    {
        var localPart = email.Split('@')[0].Trim();
        var separators = new[] { '.', '-', '_', ' ' };
        var segments = localPart.Split(separators, StringSplitOptions.RemoveEmptyEntries);
        var candidate = string.Concat(segments.Select(s => char.ToUpperInvariant(s[0])));
        if (string.IsNullOrEmpty(candidate))
            candidate = char.ToUpperInvariant(localPart[0]).ToString();

        userInitials = candidate.Length > 2 ? candidate[..2] : candidate;
    }
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@pageTitle - BTAPLON LMS</title>

    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css" />

    @await RenderSectionAsync("Styles", required: false)

    <style>
        :root {
            --lms-sidebar-width: 260px;
            --lms-topbar-height: 60px;
            --lms-bg: #f5f7fb;
            --lms-primary: #2563eb;
        }

        /* Fix scroll toàn trang */
        html, body {
            height: 100%;
            margin: 0;
            padding: 0;
            overflow: hidden; /* Không để body scroll */
        }

            body.lms-body {
                font-family: 'Inter', sans-serif;
                background: var(--lms-bg);
            }

        /* SHELL LAYOUT */
        .lms-shell {
            display: flex;
            height: 100vh;
            width: 100%;
        }

        /* SIDEBAR */
        .lms-sidebar {
            flex: 0 0 var(--lms-sidebar-width);
            max-width: var(--lms-sidebar-width);
            background: #111827;
            color: #e5e7eb;
            display: flex;
            flex-direction: column;
            border-right: 1px solid #111827;
            overflow-y: auto; /* CHO PHÉP SCROLL TRONG SIDEBAR */
        }

        .lms-brand {
            padding: 16px 16px 14px 16px;
        }

            .lms-brand a {
                text-decoration: none;
                color: inherit;
            }

        .lms-profile {
            padding: 12px 16px;
            border-top: 1px solid #111827;
            border-bottom: 1px solid #111827;
        }

        .lms-avatar {
            width: 40px;
            height: 40px;
            border-radius: 50%;
            background: var(--lms-primary);
            display: flex;
            align-items: center;
            justify-content: center;
            font-weight: 700;
            color: #fff;
            font-size: 16px;
        }

        .lms-nav {
            flex: 1 1 auto;
            padding: 8px 10px 8px 10px;
            overflow-y: auto;
        }

        .lms-nav-section {
            font-size: 11px;
            text-transform: uppercase;
            font-weight: 600;
            color: #9ca3af;
            padding: 8px 6px;
        }

        .lms-nav-link {
            display: flex;
            align-items: center;
            gap: 10px;
            padding: 9px 10px;
            margin-bottom: 4px;
            border-radius: 6px;
            color: #d1d5db;
            text-decoration: none;
            font-size: 14px;
            position: relative;
            transition: background 0.2s ease, color 0.2s ease, transform 0.1s ease;
        }

            .lms-nav-link i {
                width: 18px;
                text-align: center;
                font-size: 16px;
            }

            .lms-nav-link:hover {
                background: #1f2937;
                color: #fff;
                transform: translateX(1px);
            }

            .lms-nav-link.is-active {
                background: var(--lms-primary);
                color: #fff;
            }

        .lms-nav-badge {
            margin-left: auto;
            padding: 2px 8px;
            font-size: 11px;
            background: #ef4444;
            border-radius: 999px;
            font-weight: 600;
            color: #fff;
        }

        .lms-sidebar-footer {
            padding: 12px 16px 16px 16px;
            border-top: 1px solid #111827;
        }

        /* MAIN */
        .lms-main {
            flex: 1 1 auto;
            display: flex;
            flex-direction: column;
            min-width: 0;
        }

        .lms-topbar {
            height: var(--lms-topbar-height);
            min-height: var(--lms-topbar-height);
            background: #ffffff;
            border-bottom: 1px solid #e5e7eb;
            padding: 0 20px;
            display: flex;
            align-items: center;
            justify-content: space-between;
            flex-shrink: 0;
        }

        .lms-page-title {
            font-size: 18px;
            font-weight: 600;
        }

        .lms-content {
            flex: 1 1 auto;
            padding: 20px;
            overflow: auto; /* Chỉ content scroll */
        }

        .lms-content-inner {
            background: #ffffff;
            border-radius: 10px;
            padding: 20px;
            box-shadow: 0 3px 10px rgba(15, 23, 42, 0.06);
            min-height: calc(100% - 0px);
        }

        /* BUTTON STYLE */
        .btn-primary {
            background-color: var(--lms-primary) !important;
            border-color: var(--lms-primary) !important;
        }

            .btn-primary:hover {
                background-color: #1d4ed8 !important;
                border-color: #1d4ed8 !important;
            }

        .hover-shadow-sm {
            transition: 0.18s ease;
        }

            .hover-shadow-sm:hover {
                transform: translateY(-2px);
                box-shadow: 0 6px 16px rgba(15, 23, 42, 0.12);
            }

        /* MOBILE SIDEBAR */
        .lms-sidebar-overlay {
            display: none;
        }

        @@media (max-width: 991.98px) {
            .lms-sidebar

        {
            position: fixed;
            left: -260px;
            top: 0;
            bottom: 0;
            z-index: 1040;
        }

        .lms-sidebar.open {
            left: 0;
        }

        .lms-sidebar-overlay {
            position: fixed;
            inset: 0;
            background: rgba(15, 23, 42, 0.45);
            z-index: 1030;
            display: none;
        }

            .lms-sidebar-overlay.show {
                display: block;
            }

        }

        @@media (max-width: 575.98px) {
            .lms-content

        {
            padding: 12px;
        }

        .lms-content-inner {
            padding: 16px;
        }

        .lms-page-title {
            font-size: 16px;
        }

        }

        /* =============================
               SCROLLBAR CUSTOM – ĐỒNG BỘ
               ============================= */

        /* Scrollbar mặc định cho toàn trang */
        ::-webkit-scrollbar {
            width: 6px;
            height: 6px;
        }

        /* Track tối */
        ::-webkit-scrollbar-track {
            background: #0f172a;
        }

        /* Thanh kéo */
        ::-webkit-scrollbar-thumb {
            background: #475569;
            border-radius: 8px;
        }

            /* Hover sáng hơn */
            ::-webkit-scrollbar-thumb:hover {
                background: #64748b;
            }

        /* Sidebar dùng track tối hơn */
        .lms-sidebar::-webkit-scrollbar-track {
            background: #0f172a;
        }

        /* Scrollbar trong content sáng hơn */
        .lms-content::-webkit-scrollbar-track {
            background: #e5e7eb;
        }

        /* FIREFOX SCROLLBAR */
        * {
            scrollbar-width: thin;
            scrollbar-color: #475569 #0f172a;
        }

        .lms-content {
            scrollbar-color: #475569 #e5e7eb;
        }
    </style>

</head>

<body class="lms-body">

    <div class="lms-shell">

        <!-- Overlay cho mobile -->
        <div class="lms-sidebar-overlay d-lg-none" data-sidebar-toggle></div>

        <!-- SIDEBAR -->
        <aside class="lms-sidebar">

            <!-- BRAND -->
            <div class="lms-brand d-flex align-items-center justify-content-between">
                <a asp-controller="Home" asp-action="Index"
                   class="d-flex align-items-center gap-2 text-decoration-none text-white">
                    <i class="bi bi-mortarboard fs-3 text-info"></i>
                    <div>
                        <div class="fw-bold fs-5">BTAPLON LMS</div>
                        <div class="text-secondary small">Nền tảng học tập</div>
                    </div>
                </a>
                <button type="button"
                        class="btn btn-sm btn-outline-light d-lg-none"
                        data-sidebar-toggle
                        aria-label="Đóng menu">
                    <i class="bi bi-x-lg"></i>
                </button>
            </div>

            <!-- PROFILE -->
            <div class="lms-profile d-flex align-items-center gap-3">
                <div class="lms-avatar">@userInitials</div>
                <div class="flex-grow-1">
                    <div class="fw-semibold text-truncate">@(!string.IsNullOrEmpty(email) ? email : "Chưa đăng nhập")</div>
                    <div class="text-secondary small">@displayRole</div>
                </div>
            </div>

            <!-- NAV -->
            <nav class="lms-nav">

                <div class="lms-nav-section">Tổng quan</div>

                <a class="lms-nav-link @isActive("Home", "Index")" asp-controller="Home" asp-action="Index">
                    <i class="bi bi-house-door"></i>
                    <span>Trang chủ</span>
                </a>

                @if (role != null)
                {
                    <a class="lms-nav-link @isActive("Dashboard", "Index")" asp-controller="Dashboard" asp-action="Index">
                        <i class="bi bi-speedometer2"></i>
                        <span>Bảng điều khiển</span>
                    </a>

                    <a class="lms-nav-link @isActive("Notification","Index")" asp-controller="Notification" asp-action="Index">
                        <i class="bi bi-bell@(unreadNotificationCount > 0 ? "-fill" : "")"></i>
                        <span>Thông báo</span>
                        @if (unreadNotificationCount > 0)
                        {
                            <span class="lms-nav-badge">@unreadNotificationCount</span>
                        }
                    </a>
                }

                <div class="lms-nav-section mt-2">Học tập</div>

                @if (role == "Admin")
                {
                    <a class="lms-nav-link @isActive("Admin", "Users")" asp-controller="Admin" asp-action="Users">
                        <i class="bi bi-person-gear"></i>
                        <span>Người dùng</span>
                    </a>
                    <a class="lms-nav-link @isActive("Course", "Index")" asp-controller="Course" asp-action="Index">
                        <i class="bi bi-journal-bookmark"></i>
                        <span>Quản lý khóa học</span>
                    </a>
                    <a class="lms-nav-link @isActive("Class", "Index")" asp-controller="Class" asp-action="Index">
                        <i class="bi bi-people"></i>
                        <span>Lớp học</span>
                    </a>
                    <a class="lms-nav-link @isActive("Enrollment", "Index")" asp-controller="Enrollment" asp-action="Index">
                        <i class="bi bi-card-checklist"></i>
                        <span>Ghi danh</span>
                    </a>
                    <a class="lms-nav-link @isActive("Assignment", "Index")" asp-controller="Assignment" asp-action="Index">
                        <i class="bi bi-clipboard-check"></i>
                        <span>Bài tập</span>
                    </a>
                    <a class="lms-nav-link @isActive("Exam", "Index")" asp-controller="Exam" asp-action="Index">
                        <i class="bi bi-file-earmark-text"></i>
                        <span>Kỳ thi</span>
                    </a>
                    <a class="lms-nav-link @isActive("Report", "Admin")" asp-controller="Report" asp-action="Admin">
                        <i class="bi bi-graph-up"></i>
                        <span>Báo cáo</span>
                    </a>
                }
                else if (role == "Teacher")
                {
                    <a class="lms-nav-link @isActive("Class", "Index")" asp-controller="Class" asp-action="Index">
                        <i class="bi bi-people"></i>
                        <span>Lớp giảng dạy</span>
                    </a>
                    <a class="lms-nav-link @isActive("Assignment", "Index")" asp-controller="Assignment" asp-action="Index">
                        <i class="bi bi-clipboard-check"></i>
                        <span>Bài tập</span>
                    </a>
                    <a class="lms-nav-link @isActive("Exam", "Index")" asp-controller="Exam" asp-action="Index">
                        <i class="bi bi-file-earmark-text"></i>
                        <span>Kỳ thi</span>
                    </a>
                    <a class="lms-nav-link @isActive("Report", "Teacher")" asp-controller="Report" asp-action="Teacher">
                        <i class="bi bi-graph-up"></i>
                        <span>Báo cáo giảng dạy</span>
                    </a>
                }
                else if (role == "Student")
                {
                    <a class="lms-nav-link @isActive("Assignment", "MyAssignments")" asp-controller="Assignment" asp-action="MyAssignments">
                        <i class="bi bi-clipboard-check"></i>
                        <span>Bài tập của tôi</span>
                    </a>
                    <a class="lms-nav-link @isActive("Exam", "Available")" asp-controller="Exam" asp-action="Available">
                        <i class="bi bi-pencil-square"></i>
                        <span>Kỳ thi của tôi</span>
                    </a>
                    <a class="lms-nav-link @isActive("Report", "Student")" asp-controller="Report" asp-action="Student">
                        <i class="bi bi-bar-chart"></i>
                        <span>Báo cáo học tập</span>
                    </a>
                }
            </nav>

            <!-- FOOTER -->
            <div class="lms-sidebar-footer">
                @if (!string.IsNullOrEmpty(email))
                {
                    <a class="btn btn-outline-light w-100" asp-controller="Account" asp-action="Logout">
                        <i class="bi bi-box-arrow-right me-1"></i> Đăng xuất
                    </a>
                }
                else
                {
                    <a class="btn btn-light w-100" asp-controller="Account" asp-action="Login">
                        <i class="bi bi-box-arrow-in-right me-1"></i> Đăng nhập
                    </a>
                }
            </div>
        </aside>

        <!-- MAIN -->
        <div class="lms-main">
            <header class="lms-topbar">
                <div class="d-flex align-items-center">
                    <button type="button"
                            class="btn btn-light d-lg-none me-2"
                            data-sidebar-toggle
                            aria-label="Mở menu">
                        <i class="bi bi-list fs-4"></i>
                    </button>
                    <div class="lms-page-title">@pageTitle</div>
                </div>

                <div>
                    @if (!string.IsNullOrEmpty(email))
                    {
                        <div class="d-flex align-items-center gap-2">
                            <div class="lms-avatar">@userInitials</div>
                            <div class="text-end">
                                <div class="fw-semibold small">@email</div>
                                <div class="text-secondary small">@displayRole</div>
                            </div>
                        </div>
                    }
                    else
                    {
                        <a class="btn btn-primary btn-sm" asp-controller="Account" asp-action="Login">
                            Đăng nhập
                        </a>
                    }
                </div>
            </header>

            <main class="lms-content">
                <div class="lms-content-inner">
                    @RenderBody()
                </div>
            </main>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

    <script>
        (function () {
            const sidebar = document.querySelector('.lms-sidebar');
            const overlay = document.querySelector('.lms-sidebar-overlay');
            const toggles = document.querySelectorAll('[data-sidebar-toggle]');

            if (!sidebar || !overlay) return;

            function toggleSidebar() {
                sidebar.classList.toggle('open');
                overlay.classList.toggle('show');
            }

            toggles.forEach(btn => {
                btn.addEventListener('click', toggleSidebar);
            });

            overlay.addEventListener('click', toggleSidebar);
        })();
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
