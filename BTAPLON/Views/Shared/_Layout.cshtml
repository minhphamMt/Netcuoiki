@using Microsoft.AspNetCore.Http
@using System
@using System.Linq
@{
    var currentController = ViewContext.RouteData.Values["controller"]?.ToString();
    var currentAction = ViewContext.RouteData.Values["action"]?.ToString();
    Func<string, string?, string> isActive = (controller, action) =>
        string.Equals(controller, currentController, StringComparison.OrdinalIgnoreCase) &&
        (string.IsNullOrEmpty(action) || string.Equals(action, currentAction, StringComparison.OrdinalIgnoreCase))
            ? "is-active"
            : string.Empty;

    var role = Context.Session.GetString("UserRole");
    var email = Context.Session.GetString("UserEmail");
    var displayRole = string.IsNullOrEmpty(role) ? "Khách" : role;
    var pageTitle = ViewData["Title"] as string ?? "Bảng điều khiển";

    var userInitials = "U";
    if (!string.IsNullOrEmpty(email))
    {
        var localPart = email.Split('@')[0].Trim();
        var separators = new[] { '.', '-', '_', ' ' };
        var segments = localPart.Split(separators, StringSplitOptions.RemoveEmptyEntries);
        var candidate = string.Concat(segments.Select(s => char.ToUpperInvariant(s[0])));
        if (string.IsNullOrEmpty(candidate) && !string.IsNullOrEmpty(localPart))
        {
            candidate = char.ToUpperInvariant(localPart[0]).ToString();
        }
        userInitials = candidate.Length > 2 ? candidate[..2] : candidate;
    }
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@pageTitle - BTAPLON LMS</title>
    <meta name="description" content="BTAPLON LMS - Nền tảng quản lý học tập toàn diện cho giáo viên và học viên." />
    <meta name="author" content="BTAPLON LMS Team" />

    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/BTAPLON.styles.css" asp-append-version="true" />
</head>

<body class="lms-body">
    <div class="lms-shell">
        <div class="lms-sidebar-overlay d-lg-none" data-sidebar-toggle></div>

        <aside class="lms-sidebar">
            <div class="lms-brand">
                <a class="lms-brand-link" asp-controller="Home" asp-action="Index">
                    <span class="lms-brand-icon"><i class="bi bi-mortarboard"></i></span>
                    <div class="lms-brand-text">
                        <span class="lms-brand-title">BTAPLON LMS</span>
                        <span class="lms-brand-subtitle">Learning Hub</span>
                    </div>
                </a>
                <button type="button" class="lms-sidebar-close d-lg-none" data-sidebar-toggle aria-label="Đóng menu">
                    <i class="bi bi-x-lg"></i>
                </button>
            </div>

            <div class="lms-profile">
                <div class="lms-avatar">@userInitials</div>
                <div class="lms-profile-meta">
                    <span class="lms-profile-name">@(!string.IsNullOrEmpty(email) ? email : "Khách")</span>
                    <span class="lms-profile-role">@displayRole</span>
                </div>
            </div>

            <!-- SIDEBAR MENU -->
            <nav class="lms-nav">
                <span class="lms-nav-section">Tổng quan</span>
                <a class="lms-nav-link @isActive("Home", "Index")" asp-controller="Home" asp-action="Index">
                    <i class="bi bi-house-door"></i>
                    <span>Trang chủ</span>
                </a>

                @if (!string.IsNullOrEmpty(role))
                {
                    <a class="lms-nav-link @isActive("Dashboard", "Index")" asp-controller="Dashboard" asp-action="Index">
                        <i class="bi bi-speedometer2"></i>
                        <span>Dashboard</span>
                    </a>
                    <a class="lms-nav-link @isActive("Notification", "Index")" asp-controller="Notification" asp-action="Index">
                        <i class="bi bi-bell"></i>
                        <span>Thông báo</span>
                    </a>
                }

                <span class="lms-nav-section mt-4">Học tập</span>

                @if (string.Equals(role, "Admin", StringComparison.OrdinalIgnoreCase))
                {
                    <a class="lms-nav-link @isActive("Course", "Index")" asp-controller="Course" asp-action="Index">
                        <i class="bi bi-journal-bookmark"></i>
                        <span>Quản lý khóa học</span>
                    </a>
                    <a class="lms-nav-link @isActive("Class", "Index")" asp-controller="Class" asp-action="Index">
                        <i class="bi bi-people"></i>
                        <span>Lớp học</span>
                    </a>
                    <a class="lms-nav-link @isActive("Enrollment", "Index")" asp-controller="Enrollment" asp-action="Index">
                        <i class="bi bi-card-checklist"></i>
                        <span>Ghi danh</span>
                    </a>
                    <a class="lms-nav-link @isActive("Assignment", "Index")" asp-controller="Assignment" asp-action="Index">
                        <i class="bi bi-clipboard-check"></i>
                        <span>Bài tập</span>
                    </a>
                    <a class="lms-nav-link @isActive("Exam", "Index")" asp-controller="Exam" asp-action="Index">
                        <i class="bi bi-file-earmark-text"></i>
                        <span>Kỳ thi</span>
                    </a>
                }
                else if (string.Equals(role, "Teacher", StringComparison.OrdinalIgnoreCase))
                {
                    <a class="lms-nav-link @isActive("Class", "Index")" asp-controller="Class" asp-action="Index">
                        <i class="bi bi-people"></i>
                        <span>Lớp giảng dạy</span>
                    </a>
                    <a class="lms-nav-link @isActive("Assignment", "Index")" asp-controller="Assignment" asp-action="Index">
                        <i class="bi bi-clipboard-check"></i>
                        <span>Bài tập</span>
                    </a>
                    <a class="lms-nav-link @isActive("Exam", "Index")" asp-controller="Exam" asp-action="Index">
                        <i class="bi bi-file-earmark-text"></i>
                        <span>Kỳ thi</span>
                    </a>
                }
                else if (string.Equals(role, "Student", StringComparison.OrdinalIgnoreCase))
                {
                    <a class="lms-nav-link @isActive("Exam", "Available")" asp-controller="Exam" asp-action="Available">
                        <i class="bi bi-pencil-square"></i>
                        <span>Kỳ thi của tôi</span>
                    </a>
                }
            </nav>

            <div class="lms-sidebar-footer mt-auto">
                @if (!string.IsNullOrEmpty(email))
                {
                    <a class="btn btn-outline-light w-100" asp-controller="Account" asp-action="Logout">
                        <i class="bi bi-box-arrow-right me-2"></i>Đăng xuất
                    </a>
                }
                else
                {
                    <a class="btn btn-light w-100" asp-controller="Account" asp-action="Login">
                        <i class="bi bi-box-arrow-in-right me-2"></i>Đăng nhập
                    </a>
                }
            </div>
        </aside>

        <div class="lms-main">
            <header class="lms-topbar">
                <div class="lms-topbar-left">
                    <button type="button" class="lms-icon-btn d-lg-none" data-sidebar-toggle aria-label="Mở menu">
                        <i class="bi bi-list"></i>
                    </button>
                    <div class="lms-page-title">@pageTitle</div>
                </div>
                <div class="lms-topbar-right">
                    @if (!string.IsNullOrEmpty(email))
                    {
                        <div class="lms-user-chip">
                            <div class="lms-avatar">@userInitials</div>
                            <div class="lms-user-chip-meta">
                                <span class="lms-user-chip-name">@email</span>
                                <span class="lms-user-chip-role">@displayRole</span>
                            </div>
                        </div>
                    }
                    else
                    {
                        <a class="btn btn-primary" asp-controller="Account" asp-action="Login">Đăng nhập</a>
                    }
                </div>
            </header>

            <main class="lms-content">
                <div class="lms-content-inner">
                    @RenderBody()
                </div>
            </main>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
