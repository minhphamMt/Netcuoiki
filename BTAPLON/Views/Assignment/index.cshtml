@model IEnumerable<BTAPLON.Models.Assignment>
@{
    var role = Context.Session.GetString("UserRole");
    ViewData["Title"] = "Danh sách bài tập";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h1 class="h3 mb-0">Danh sách bài tập</h1>
    @if (role == "Teacher" || role == "Admin")
    {
        <a class="btn btn-primary" asp-action="Create"><i class="bi bi-plus-lg me-1"></i>Thêm bài tập</a>
    }
</table>
</div>

<div class="table-responsive">
    <table class="table table-bordered table-striped align-middle">
        <thead class="table-light">
            <tr>
                <th style="width: 80px">Mã</th>
                <th style="width: 160px">Lớp</th>
                <th>Tiêu đề</th>
                <th style="width: 180px">Hạn nộp</th>
                <th style="width: 240px" class="text-center">Thao tác</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.AssignmentID</td>
                    <td>
                        @item.Class?.ClassCode
                        <div class="text-muted small">@item.Class?.Course?.CourseName</div>
                    </td>
                    <td>@item.Title</td>
                    <td>@item.DueDate?.ToString("dd/MM/yyyy")</td>
                    <td class="text-center">
                        @if (role == "Teacher" || role == "Admin")
                        {
                            <a class="btn btn-outline-secondary btn-sm" asp-action="Edit" asp-route-id="@item.AssignmentID">
                                <i class="bi bi-pencil-square me-1"></i>Sửa
                            </a>
                            <a class="btn btn-outline-danger btn-sm ms-1" asp-action="Delete" asp-route-id="@item.AssignmentID">
                                <i class="bi bi-trash me-1"></i>Xóa
                            </a>
                        }
                        @if (role == "Student" || role == "Admin")
                        {
                            <a class="btn btn-outline-info btn-sm ms-1" asp-action="Details" asp-route-id="@item.AssignmentID">
                                <i class="bi bi-eye me-1"></i>Chi tiết
                            </a>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>