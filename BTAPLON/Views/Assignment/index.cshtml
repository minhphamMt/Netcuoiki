@model IEnumerable<BTAPLON.Models.Assignment>
@{
    var role = Context.Session.GetString("UserRole");
}

<h2>Assignment List</h2>


@if (role == "Teacher" || role == "Admin")
{
    <p>
        <a class="btn btn-primary" asp-action="Create">Create New</a>
    </p>
}
<table class="table table-bordered table-striped">
    <tr>
        <th>ID</th>
        <th>Class</th>
        <th>Title</th>
        <th>Due Date</th>
        <th>Action</th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>@item.AssignmentID</td>
            <td>@item.Class?.ClassCode</td>
            <td>@item.Title</td>
            <td>
                @item.DueDate?.ToShortDateString()
            </td>
            <td>
                @if (role == "Teacher"|| role == "Admin")
                {
                    <a class="btn btn-warning btn-sm" asp-action="Edit" asp-route-id="@item.AssignmentID">Edit</a>
                    <a class="btn btn-danger btn-sm" asp-action="Delete" asp-route-id="@item.AssignmentID">Delete</a>
                }


                @if (role == "Student" || role == "Admin")
                {
                    <a class="btn btn-info btn-sm" asp-action="Details" asp-route-id="@item.AssignmentID">Details</a>
                }


            </td>
        </tr>
    }
</table>
