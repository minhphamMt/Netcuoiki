@model BTAPLON.Models.Assignment

@{
    ViewData["Title"] = "Chỉnh sửa bài tập";
}

<!-- HEADER -->
<div class="dashboard-header mb-4 p-4 rounded-4">
    <h1 class="fw-bold text-white mb-1">
        <i class="fa-solid fa-pen-ruler me-2"></i>Chỉnh sửa bài tập
    </h1>
    <p class="text-white-50 mb-0">Cập nhật thông tin bài tập cho lớp học.</p>
</div>


<!-- FORM -->
<div class="form-container mx-auto">
    <form asp-action="Edit" method="post" class="dashboard-card shadow-sm p-4 rounded-4">

        <input type="hidden" asp-for="AssignmentID" />

        <!-- Validation -->
        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

        <!-- Class -->
        <div class="mb-3">
            <label class="form-label fw-semibold">Lớp học</label>
            <div class="input-group">
                <span class="input-group-text bg-light"><i class="fa-solid fa-school"></i></span>
                <select asp-for="ClassID" asp-items="ViewBag.ClassID" class="form-select"></select>
            </div>
        </div>

        <!-- Title -->
        <div class="mb-3">
            <label class="form-label fw-semibold">Tiêu đề</label>
            <div class="input-group">
                <span class="input-group-text bg-light"><i class="fa-solid fa-tag"></i></span>
                <input asp-for="Title" class="form-control" placeholder="Nhập tiêu đề bài tập..." />
            </div>
        </div>

        <!-- Description -->
        <div class="mb-3">
            <label class="form-label fw-semibold">Mô tả</label>
            <textarea asp-for="Description" class="form-control description-box"
                      placeholder="Nhập mô tả chi tiết..."></textarea>
        </div>

        <!-- Due Date -->
        <div class="mb-3">
            <label class="form-label fw-semibold">Hạn nộp</label>
            <div class="input-group">
                <span class="input-group-text bg-light"><i class="fa-solid fa-calendar-days"></i></span>
                <input type="date" asp-for="DueDate" class="form-control" />
            </div>
        </div>

        <!-- BUTTONS -->
        <div class="d-flex gap-2 mt-4">
            <button type="submit" class="btn btn-primary px-4">
                <i class="fa-solid fa-circle-check me-2"></i>Lưu chỉnh sửa
            </button>

            <a asp-action="Index" class="btn btn-secondary px-4">
                <i class="fa-solid fa-arrow-left me-2"></i>Quay lại
            </a>
        </div>

    </form>
</div>


<!-- STYLE -->
<style>

    /* Header */
    .dashboard-header {
        background: linear-gradient(135deg, #00c6ff, #0072ff);
        color: white;
        box-shadow: 0 4px 20px rgba(0,0,0,0.12);
    }

    /* Center form */
    .form-container {
        max-width: 650px;
    }

    /* Card */
    .dashboard-card {
        background: #fff;
        border-radius: 18px;
        transition: .2s;
    }

        .dashboard-card:hover {
            background: #f8f9fa;
        }

    /* Inputs */
    .input-group-text {
        border-right: none;
        border-radius: 12px 0 0 12px;
    }

    .form-control,
    .form-select {
        border-radius: 0 12px 12px 0;
        border-left: none;
    }

        .form-control:focus,
        .form-select:focus {
            border-color: #0072ff;
            box-shadow: 0 0 0 3px rgba(0,114,255,0.25);
        }

    /* Description box */
    .description-box {
        min-height: 130px;
        border-radius: 12px;
        resize: vertical;
    }

    /* Buttons */
    button, a.btn {
        border-radius: 12px !important;
    }

</style>

<!-- ICONS -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
