@model BTAPLON.Models.Assignment
@using Microsoft.AspNetCore.Http

@{
    ViewData["Title"] = "Chi tiết bài tập";
    var userRole = Context.Session.GetString("UserRole");
    var userId = Context.Session.GetInt32("UserID");
    var isAdmin = string.Equals(userRole, "Admin", StringComparison.OrdinalIgnoreCase);
    var isTeacher = string.Equals(userRole, "Teacher", StringComparison.OrdinalIgnoreCase) && Model.Class?.Course?.TeacherID == userId;
    var canGrade = isAdmin || isTeacher;
}

<h2>Chi tiết bài tập</h2>

<p><strong>Lớp:</strong> @Model.Class?.ClassCode</p>
<p><strong>Tiêu đề:</strong> @Model.Title</p>
<p><strong>Mô tả:</strong> @Model.Description</p>
<p><strong>Thời gian tạo:</strong> @Model.DueDate?.ToShortDateString()</p>

<hr />

<h4>Nộp bài</h4>

<form asp-controller="Submission" asp-action="Submit" method="post" enctype="multipart/form-data">
    @Html.AntiForgeryToken()
    <input type="hidden" name="assignmentID" value="@Model.AssignmentID" />
    <input type="file" class="form-control mb-2" name="fileUpload" id="fileUpload" />

    <button type="submit" class="btn btn-primary">Nộp bài</button>
</form>

<hr />

<h4>Danh sách bài nộp</h4>

<table class="table table-bordered">
    <tr>
        <th>Học sinh</th>
        <th>File</th>
        <th>Thời gian nộp</th>
        <th>Điểm</th>
        <th>Đánh giá</th>
        @if (canGrade)
        {
            <th>Actions</th>
        }
    </tr>
    @foreach (var s in Model.Submissions ?? new List<BTAPLON.Models.Submission>())
    {
        <tr>
            <td>@s.Student?.FullName</td>
            <td><a href="@s.FilePath" target="_blank">Xem file</a></td>
            <td>@s.SubmittedAt</td>
            <td>@(s.Score?.ToString("0.##") ?? "-")</td>
            <td>@(string.IsNullOrWhiteSpace(s.Feedback) ? "-" : s.Feedback)</td>
            @if (canGrade)
            {
                <td>
                    <a class="btn btn-sm btn-primary" asp-controller="Submission" asp-action="Grade" asp-route-id="@s.SubmissionID">Chấm</a>
                </td>
            }
        </tr>
    }
</table>

<a class="btn btn-secondary" asp-action="Index">Back</a>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}