@{
    ViewData["Title"] = "Đăng nhập";
}

@section Styles {
    <style>
        /* Body full màn hình */
        html, body {
            height: 100%;
            margin: 0;
            padding: 0;
            overflow: hidden !important;
        }

        /* ẨN SIDEBAR + TOPBAR */
        .lms-sidebar,
        .lms-topbar {
            display: none !important;
        }

        /* Đảm bảo layout vẫn giữ cấu trúc */
        .lms-shell {
            display: flex !important;
            height: 100vh !important;
        }

        .lms-main {
            flex: 1;
            height: 100vh;
            overflow: hidden !important;
        }

        .lms-content {
            padding: 0 !important;
            height: 100vh !important;
            overflow: hidden !important;
        }

        .lms-content-inner {
            padding: 0 !important;
            background: none !important;
            height: 100vh !important;
            overflow: hidden !important;
        }

        /* Background */
        .login-background {
            width: 100%;
            height: 100%;
            display: flex;
            align-items: center;
            justify-content: center;
            background-image: url('@Url.Content("~/images/nenNEU.jpg")');
            background-size: cover;
            background-position: center;
            background-repeat: no-repeat;
        }

            /* Thêm lớp làm mờ
            .login-background::after {
                content: "";
                position: absolute;
                inset: 0;
                background: rgba(0,0,0,0.35);
                backdrop-filter: blur(2px);
            } */

        /* Card login */
        .login-card {
            position: relative;
            z-index: 2;
            width: 380px;
            padding: 28px;
            background: rgba(255,255,255,0.92);
            backdrop-filter: blur(6px);
            border-radius: 14px;
            box-shadow: 0 8px 25px rgba(0,0,0,0.25);
        }

        .login-title {
            font-weight: 700;
            color: #2563eb;
        }

        .form-control {
            border-radius: 10px;
            padding: 12px;
        }

        .btn-primary {
            border-radius: 10px;
            padding: 10px;
            font-weight: 600;
        }
    </style>
}

<div class="login-background">
    <div class="card login-card">
        <h3 class="text-center login-title mb-4">Đăng nhập hệ thống LMS</h3>

        <form method="post" asp-action="Login">
            <div class="mb-3">
                <label class="form-label fw-semibold">Email</label>
                <input class="form-control" type="text" name="email" placeholder="Nhập email..." required />
            </div>

            <div class="mb-4">
                <label class="form-label fw-semibold">Mật khẩu</label>
                <input class="form-control" type="password" name="password" placeholder="Nhập mật khẩu..." required />
            </div>

            <button class="btn btn-primary w-100" type="submit">
                Đăng nhập
            </button>

            @if (ViewBag.Error != null)
            {
                <p class="text-danger text-center mt-3">@ViewBag.Error</p>
            }
        </form>
    </div>
</div>
