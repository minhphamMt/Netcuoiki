@{
    ViewData["Title"] = "Đăng nhập";
}

@section Styles {
    <style>
        .lms-content {
            padding: 0;
            background: none;
            display: flex;
        }

        .lms-content-inner {
            flex: 1;
            padding: 0;
            background: none;
            box-shadow: none;
            min-height: 0;
            display: flex;
        }

        .login-background {
            flex: 1;
            min-height: 0;
            display: flex;
            align-items: center;
            justify-content: center;
            background-image: url('@Url.Content("~/images/nenNEU.jpg")');
            background-size: cover;
            background-repeat: no-repeat;
            background-position: center;
            
        }

        .login-card {
            width: 380px;
            background-color: rgba(255, 255, 255, 0.92);
        }
    </style>
}

<div class="login-background">
    <div class="card login-card shadow p-4">
        <h3 class="text-center mb-4">Đăng nhập hệ thống</h3>

        <form method="post" asp-action="Login">
            <div class="mb-3">
                <label class="form-label">Email</label>
                <input class="form-control" type="text" name="email" placeholder="Nhập email" required />
            </div>

            <div class="mb-4s
            <div class="mb-4">
                <label class="form-label">Mật khẩu</label>
                <input class="form-control" type="password" name="password" placeholder="Nhập mật khẩu" required />
            </div>

            <button class="btn btn-primary w-100 mt-2" type="submit">Đăng nhập</button>

            @if (ViewBag.Error != null)
            {
                    <p class="text-danger mt-3 text-center">@ViewBag.Error</p>
            }
        </form>
    </div>
</div>
