@model BTAPLON.Models.ViewModels.StudentLearningReportViewModel
@using System.Linq
@{
    ViewData["Title"] = "Báo cáo học tập";
}

<!-- HEADER -->
<div class="dashboard-header mb-4 p-4 rounded-4">
    <div class="d-flex flex-column flex-md-row justify-content-between align-items-md-center gap-3">
        <div>
            <h1 class="fw-bold text-white mb-1">@ViewData["Title"]</h1>
            <p class="text-white-50 mb-0">Tổng hợp tiến độ, điểm số và kết quả học tập của bạn.</p>
        </div>

        <div class="btn-group shadow-sm">
            <a asp-controller="Report" asp-action="ExportStudent" asp-route-format="pdf"
               class="btn btn-light btn-sm">
                <i class="fa-solid fa-file-pdf me-2"></i> PDF
            </a>
            <a asp-controller="Report" asp-action="ExportStudent" asp-route-format="word"
               class="btn btn-outline-light btn-sm">
                <i class="fa-solid fa-file-word me-2"></i> Word
            </a>
        </div>
    </div>
</div>


<!-- KPI Statistics -->
<div class="row g-3 mb-4">

    <div class="col-md-3">
        <div class="kpi-card shadow-sm">
            <div class="kpi-icon bg-primary-subtle text-primary"><i class="fa-solid fa-book"></i></div>
            <div class="kpi-label">Bài tập đã giao</div>
            <div class="kpi-value">@Model.TotalAssignments</div>
            <div class="kpi-sub">@Model.CompletedAssignments đã nộp</div>
        </div>
    </div>

    <div class="col-md-3">
        <div class="kpi-card shadow-sm">
            <div class="kpi-icon bg-success-subtle text-success"><i class="fa-solid fa-chart-line"></i></div>
            <div class="kpi-label">Điểm trung bình bài tập</div>
            <div class="kpi-value">@((Model.AverageAssignmentScore?.ToString("0.##") ?? "-"))</div>
        </div>
    </div>

    <div class="col-md-3">
        <div class="kpi-card shadow-sm">
            <div class="kpi-icon bg-warning-subtle text-warning"><i class="fa-solid fa-file-pen"></i></div>
            <div class="kpi-label">Kỳ thi đã giao</div>
            <div class="kpi-value">@Model.TotalExams</div>
            <div class="kpi-sub">@Model.CompletedExams đã làm</div>
        </div>
    </div>

    <div class="col-md-3">
        <div class="kpi-card shadow-sm">
            <div class="kpi-icon bg-info-subtle text-info"><i class="fa-solid fa-graduation-cap"></i></div>
            <div class="kpi-label">Điểm trung bình kỳ thi</div>
            <div class="kpi-value">@((Model.AverageExamScore?.ToString("0.##") ?? "-"))</div>
        </div>
    </div>

</div>


<!-- Assignments Submitted -->
<div class="dashboard-card shadow-sm mb-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h5 class="card-title mb-0 fw-semibold">📘 Bài tập đã nộp</h5>
        <a asp-controller="Assignment" asp-action="MyAssignments" class="btn btn-outline-primary btn-sm">
            Xem tất cả
        </a>
    </div>

    @if (!Model.Assignments.Any())
    {
        <p class="text-muted">Bạn chưa nộp bài tập nào.</p>
    }
    else
    {
        <table class="table modern-table">
            <thead>
                <tr>
                    <th>Bài tập</th>
                    <th>Lớp</th>
                    <th>Hạn nộp</th>
                    <th>Đã nộp</th>
                    <th>Điểm</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var a in Model.Assignments)
                {
                    <tr>
                        <td>@a.Title</td>
                        <td>@a.ClassCode · @a.CourseName</td>
                        <td>@(a.DueDate?.ToString("dd/MM/yyyy HH:mm") ?? "Không giới hạn")</td>
                        <td>@a.SubmittedAt?.ToString("dd/MM/yyyy HH:mm")</td>
                        <td class="fw-semibold">@((a.Score?.ToString("0.##") ?? "-"))</td>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>


<!-- Exams Participated -->
<div class="dashboard-card shadow-sm">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h5 class="card-title mb-0 fw-semibold">📝 Kỳ thi đã tham gia</h5>
        <a asp-controller="Exam" asp-action="Available" class="btn btn-outline-primary btn-sm">
            Kỳ thi của tôi
        </a>
    </div>

    @if (!Model.Exams.Any())
    {
        <p class="text-muted">Bạn chưa tham gia kỳ thi nào.</p>
    }
    else
    {
        <table class="table modern-table">
            <thead>
                <tr>
                    <th>Kỳ thi</th>
                    <th>Lớp</th>
                    <th>Thời gian nộp</th>
                    <th>Điểm</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var e in Model.Exams)
                {
                    <tr>
                        <td>@e.Title</td>
                        <td>@e.ClassCode · @e.CourseName</td>
                        <td>@e.SubmittedAt?.ToString("dd/MM/yyyy HH:mm")</td>
                        <td class="fw-semibold">@((e.Score?.ToString("0.##") ?? "-"))</td>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>


<!-- CUSTOM STYLE – SAME THEME AS ADMIN REPORT -->
<style>

    /* Header Gradient */
    .dashboard-header {
        background: linear-gradient(135deg, #00c6ff, #0072ff);
        color: white;
        box-shadow: 0 4px 20px rgba(0,0,0,0.15);
    }

    /* KPI Cards */
    .kpi-card {
        background: #fff;
        border-radius: 18px;
        padding: 1.4rem;
        transition: 0.25s;
    }

        .kpi-card:hover {
            transform: translateY(-3px);
            box-shadow: 0 6px 20px rgba(0,0,0,0.12);
        }

    .kpi-icon {
        width: 46px;
        height: 46px;
        border-radius: 12px;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 20px;
        margin-bottom: 8px;
    }

    .kpi-label {
        text-transform: uppercase;
        font-size: 0.75rem;
        color: #6c757d;
        font-weight: 600;
        letter-spacing: .5px;
    }

    .kpi-value {
        font-size: 2rem;
        font-weight: 700;
    }

    .kpi-sub {
        font-size: 0.85rem;
        color: #6c757d;
    }

    /* Dashboard Cards */
    .dashboard-card {
        background: #fff;
        border-radius: 18px;
        padding: 1.5rem;
        transition: .2s ease;
    }

        .dashboard-card:hover {
            background: #f8f9fa;
        }

    /* Modern table */
    .modern-table thead {
        background: #f1f3f5;
    }

    .modern-table tbody tr:hover {
        background: #f8f9fa;
    }

    .modern-table th {
        font-weight: 600;
        color: #495057;
    }

</style>

<!-- Icons -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />
