@model BTAPLON.Models.ViewModels.TeacherPerformanceReportViewModel
@using System.Linq
@{
    ViewData["Title"] = "Báo cáo giảng dạy";
}

<!-- HEADER -->
<div class="dashboard-header mb-4 p-4 rounded-4">
    <div class="d-flex flex-column flex-md-row justify-content-between align-items-md-center gap-3">
        <div>
            <h1 class="fw-bold text-white mb-1">@ViewData["Title"]</h1>
            <p class="text-white-50 mb-0">Tổng quan giảng dạy, lớp phụ trách và kết quả học viên.</p>
        </div>

        <div class="btn-group shadow-sm">
            <a asp-controller="Report" asp-action="ExportTeacher" asp-route-format="pdf"
               class="btn btn-light btn-sm">
                <i class="fa-solid fa-file-pdf me-2"></i> PDF
            </a>
            <a asp-controller="Report" asp-action="ExportTeacher" asp-route-format="word"
               class="btn btn-outline-light btn-sm">
                <i class="fa-solid fa-file-word me-2"></i> Word
            </a>
        </div>
    </div>
</div>


<!-- KPI STATISTICS -->
<div class="row g-3 mb-4">

    <div class="col-md-3">
        <div class="kpi-card shadow-sm">
            <div class="kpi-icon bg-primary-subtle text-primary"><i class="fa-solid fa-school"></i></div>
            <div class="kpi-label">Lớp phụ trách</div>
            <div class="kpi-value">@Model.TotalClasses</div>
        </div>
    </div>

    <div class="col-md-3">
        <div class="kpi-card shadow-sm">
            <div class="kpi-icon bg-success-subtle text-success"><i class="fa-solid fa-users"></i></div>
            <div class="kpi-label">Học viên</div>
            <div class="kpi-value">@Model.TotalStudents</div>
        </div>
    </div>

    <div class="col-md-3">
        <div class="kpi-card shadow-sm">
            <div class="kpi-icon bg-warning-subtle text-warning"><i class="fa-solid fa-book-open"></i></div>
            <div class="kpi-label">Bài tập giao</div>
            <div class="kpi-value">@Model.AssignmentCount</div>
        </div>
    </div>

    <div class="col-md-3">
        <div class="kpi-card shadow-sm">
            <div class="kpi-icon bg-info-subtle text-info"><i class="fa-solid fa-file-pen"></i></div>
            <div class="kpi-label">Kỳ thi tạo</div>
            <div class="kpi-value">@Model.ExamCount</div>
        </div>
    </div>

</div>


<!-- SECOND KPI -->
<div class="row g-3 mb-4">

    <div class="col-md-6">
        <div class="kpi-card shadow-sm">
            <div class="kpi-icon bg-purple-subtle text-purple"><i class="fa-solid fa-chart-line"></i></div>
            <div class="kpi-label">Điểm TB bài tập</div>
            <div class="kpi-value">@((Model.AverageAssignmentScore?.ToString("0.##") ?? "-"))</div>
        </div>
    </div>

    <div class="col-md-6">
        <div class="kpi-card shadow-sm">
            <div class="kpi-icon bg-teal-subtle text-teal"><i class="fa-solid fa-graduation-cap"></i></div>
            <div class="kpi-label">Điểm TB kỳ thi</div>
            <div class="kpi-value">@((Model.AverageExamScore?.ToString("0.##") ?? "-"))</div>
        </div>
    </div>

</div>


<!-- CLASS DETAIL -->
<div class="dashboard-card shadow-sm">
    <h5 class="card-title mb-3 fw-semibold">📚 Chi tiết lớp học</h5>

    @if (!Model.Classes.Any())
    {
        <p class="text-muted">Bạn chưa được phân công lớp nào.</p>
    }
    else
    {
        <table class="table modern-table">
            <thead>
                <tr>
                    <th>Lớp</th>
                    <th>Khóa học</th>
                    <th>Học viên</th>
                    <th>Bài tập</th>
                    <th>Kỳ thi</th>
                    <th>Điểm TB bài tập</th>
                    <th>Điểm TB kỳ thi</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var cls in Model.Classes)
                {
                    <tr>
                        <td>@cls.ClassCode</td>
                        <td>@cls.CourseName</td>
                        <td>@cls.StudentCount</td>
                        <td>@cls.AssignmentCount</td>
                        <td>@cls.ExamCount</td>
                        <td class="fw-semibold">@((cls.AverageAssignmentScore?.ToString("0.##") ?? "-"))</td>
                        <td class="fw-semibold">@((cls.AverageExamScore?.ToString("0.##") ?? "-"))</td>
                    </tr>
                }
            </tbody>
        </table>
    }

</div>


<!-- CUSTOM STYLES (same theme as Student & Admin dashboards) -->
<style>

    /* HEADER GRADIENT */
    .dashboard-header {
        background: linear-gradient(135deg, #00c6ff, #0072ff);
        color: white;
        box-shadow: 0 4px 20px rgba(0,0,0,0.15);
    }

    /* KPI CARDS */
    .kpi-card {
        background: #fff;
        border-radius: 18px;
        padding: 1.4rem;
        transition: .25s;
    }

        .kpi-card:hover {
            transform: translateY(-3px);
            box-shadow: 0 6px 20px rgba(0,0,0,0.12);
        }

    .kpi-icon {
        width: 46px;
        height: 46px;
        border-radius: 12px;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 20px;
        margin-bottom: 8px;
    }

    .kpi-label {
        text-transform: uppercase;
        font-size: .75rem;
        font-weight: 600;
        color: #6c757d;
        letter-spacing: .5px;
    }

    .kpi-value {
        font-size: 2rem;
        font-weight: 700;
    }

    /* Dashboard section cards */
    .dashboard-card {
        background: #fff;
        border-radius: 18px;
        padding: 1.5rem;
        margin-bottom: 1rem;
        transition: .2s ease;
    }

        .dashboard-card:hover {
            background: #f8f9fa;
        }

    /* Modern Table */
    .modern-table thead {
        background: #f1f3f5;
    }

    .modern-table th {
        font-weight: 600;
    }

    .modern-table tbody tr:hover {
        background: #f8f9fa;
    }

</style>

<!-- ICONS -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />
