@model IEnumerable<Exam>
@{
    ViewData["Title"] = "Quản lý bài thi";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h2>@ViewData["Title"]</h2>
    <a asp-action="Create" class="btn btn-primary">Tạo bài thi</a>
</div>

@if (!Model.Any())
{
    <div class="alert alert-info">Chưa có bài thi nào. Hãy tạo bài thi mới.</div>
}
else
{
<table class="table table-striped">
    <thead>
        <tr>
            <th>Tên bài thi</th>
            <th>Lớp</th>
            <th>Thời lượng</th>
            <th>Trạng thái</th>
            <th>Số bài nộp</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var exam in Model)
        {
            <tr>
                <td>@exam.Title</td>
                <td>
                    @exam.Class?.ClassCode
                    <div class="text-muted small">@exam.Class?.Course?.CourseName</div>
                </td>
                <td>@exam.DurationMinutes phút</td>
                <td>
                    @if (exam.IsPublished)
                    {
                        <span class="badge bg-success">Đang mở</span>
                        <div class="small text-muted">Bắt đầu: @exam.StartTime?.ToString("dd/MM/yyyy HH:mm")</div>
                    }
                    else
                    {
                    <span class="badge bg-secondary">Đang soạn</span>
                    }
                </td>
                <td>@(exam.Submissions?.Count ?? 0)</td>
                <td class="text-end">
                    <a asp-action="Manage" asp-route-id="@exam.ExamID" class="btn btn-sm btn-outline-primary me-1">Cấu hình</a>
                    <a asp-action="Review" asp-route-id="@exam.ExamID" class="btn btn-sm btn-outline-info me-1">Bài nộp</a>
                    <a asp-action="Statistics" asp-route-id="@exam.ExamID" class="btn btn-sm btn-outline-secondary me-1">Thống kê</a>
                    @if (exam.IsPublished)
                    {
                        <form asp-action="Close" asp-route-id="@exam.ExamID" method="post" class="d-inline">
                            @Html.AntiForgeryToken()
                            <button type="submit" class="btn btn-sm btn-warning" onclick="return confirm('Đóng bài thi?')">Đóng</button>
                        </form>
                    }
                    else
                    {
                    <a asp-action="Manage" asp-route-id="@exam.ExamID" class="btn btn-sm btn-success">Mở đề</a>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
}