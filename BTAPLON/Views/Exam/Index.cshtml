@model IEnumerable<Exam>

@{
    ViewData["Title"] = "Quản lý bài thi";
    var searchTerm = ViewData["SearchTerm"] as string ?? string.Empty;
}

<!-- ICONS -->
<link rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />

<!-- PAGE HEADER (ĐỒNG BỘ STYLE) -->
<div class="dashboard-header mb-4 p-4 rounded-4 d-flex justify-content-between align-items-center shadow-sm">
    <div>
        <h1 class="fw-bold text-white mb-1">
            <i class="fa-solid fa-file-circle-question me-2"></i>Quản lý bài thi
        </h1>
        <p class="text-white-50 mb-0">Tạo, theo dõi và quản lý các bài thi trong hệ thống.</p>
    </div>

    <a asp-action="Create" class="btn btn-light shadow-sm px-3 rounded-3">
        <i class="fa-solid fa-plus me-1"></i>Tạo bài thi
    </a>
</div>

<!-- SEARCH BAR (ĐỒNG BỘ STYLE) -->
<div class="dashboard-card p-3 shadow-sm rounded-4 mb-4">
    <form method="get" asp-action="Index">
        <div class="input-group input-group-lg search-box">

            <span class="input-group-text bg-white border-end-0">
                <i class="fa-solid fa-search text-muted"></i>
            </span>

            <input type="search"
                   name="searchTerm"
                   value="@searchTerm"
                   class="form-control border-start-0"
                   placeholder="Tìm theo tên bài thi, lớp học..." />

            @if (!string.IsNullOrWhiteSpace(searchTerm))
            {
                <a asp-action="Index" class="btn btn-outline-secondary">Xóa</a>
            }

            <button type="submit" class="btn btn-primary px-4">
                <i class="fa-solid fa-magnifying-glass me-2"></i>Tìm kiếm
            </button>
        </div>
    </form>
</div>

<!-- EMPTY STATE -->
@if (!Model.Any())
{
    <div class="alert alert-info shadow-sm text-center rounded-4 p-4">
        <i class="fa-solid fa-circle-info me-2"></i>
        Chưa có bài thi nào. Hãy tạo bài thi mới.
    </div>
}
else
{
    <!-- TABLE -->
    <div class="dashboard-card shadow-sm rounded-4 p-3">
        <div class="table-responsive">

            <table class="table modern-table align-middle mb-0">
                <thead>
                    <tr>
                        <th>Tên bài thi</th>
                        <th style="width: 220px;">Lớp</th>
                        <th style="width: 140px;">Thời lượng</th>
                        <th style="width: 200px;">Trạng thái</th>
                        <th style="width: 100px;">Bài nộp</th>
                        <th class="text-center" style="width: 300px;">Thao tác</th>
                    </tr>
                </thead>

                <tbody>
                    @foreach (var exam in Model)
                    {
                        <tr>
                            <!-- Tên bài thi -->
                            <td class="fw-semibold">@exam.Title</td>

                            <!-- Lớp -->
                            <td>
                                <div>@exam.Class?.ClassCode</div>
                                <div class="text-muted small">@exam.Class?.Course?.CourseName</div>
                            </td>

                            <!-- Thời lượng -->
                            <td>@exam.DurationMinutes phút</td>

                            <!-- Trạng thái -->
                            <td>
                                @if (exam.IsPublished)
                                {
                                    <span class="badge bg-success px-3 py-2">
                                        <i class="fa-solid fa-unlock me-1"></i>Đang mở
                                    </span>
                                    <div class="text-muted small mt-1">
                                        <i class="fa-regular fa-clock me-1"></i>
                                        @exam.StartTime?.ToString("dd/MM/yyyy HH:mm")
                                    </div>
                                }
                                else
                                {
                                    <span class="badge bg-secondary px-3 py-2">
                                        <i class="fa-solid fa-pencil me-1"></i>Đang soạn
                                    </span>
                                }
                            </td>

                            <!-- Số bài nộp -->
                            <td class="fw-bold">
                                @((exam.Submissions?.Count ?? 0))
                            </td>

                            <!-- Thao tác -->
                            <td class="text-center">
                                <div class="d-flex flex-wrap justify-content-center gap-2">

                                    <a asp-action="Manage" asp-route-id="@exam.ExamID"
                                       class="btn btn-outline-primary btn-sm rounded-3">
                                        <i class="fa-solid fa-gear me-1"></i>Cấu hình
                                    </a>

                                    <a asp-action="Review" asp-route-id="@exam.ExamID"
                                       class="btn btn-outline-info btn-sm rounded-3">
                                        <i class="fa-solid fa-file-contract me-1"></i>Bài nộp
                                    </a>

                                    <a asp-action="Statistics" asp-route-id="@exam.ExamID"
                                       class="btn btn-outline-secondary btn-sm rounded-3">
                                        <i class="fa-solid fa-chart-line me-1"></i>Thống kê
                                    </a>

                                    @if (exam.IsPublished)
                                    {
                                        <form asp-action="Close" asp-route-id="@exam.ExamID" method="post" class="d-inline">
                                            @Html.AntiForgeryToken()
                                            <button type="submit"
                                                    class="btn btn-warning btn-sm rounded-3"
                                                    onclick="return confirm('Đóng bài thi này?');">

                                                <i class="fa-solid fa-lock me-1"></i>Đóng
                                            </button>
                                        </form>
                                    }
                                    else
                                    {
                                        <a asp-action="Manage" asp-route-id="@exam.ExamID"
                                           class="btn btn-success btn-sm rounded-3">
                                            <i class="fa-solid fa-unlock me-1"></i>Mở đề
                                        </a>
                                    }

                                    <a asp-action="Edit" asp-route-id="@exam.ExamID"
                                       class="btn btn-warning btn-sm rounded-3">
                                        <i class="fa-solid fa-pen-to-square me-1"></i>Sửa
                                    </a>

                                    <form asp-action="Delete" asp-route-id="@exam.ExamID" method="post" class="d-inline">
                                        @Html.AntiForgeryToken()
                                        <button type="submit"
                                                class="btn btn-danger btn-sm rounded-3"
                                                onclick="return confirm('Xóa bài thi này?');">
                                            <i class="fa-solid fa-trash me-1"></i>Xóa
                                        </button>
                                    </form>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>

            </table>

        </div>
    </div>
}

<!-- SHARED STYLE (ĐỒNG BỘ) -->
<style>

    /* Header gradient */
    .dashboard-header {
        background: linear-gradient(135deg, #6a82fb, #fc5c7d);
        color: white;
    }

    /* Dashboard Card */
    .dashboard-card {
        background: #fff;
        border-radius: 18px;
    }

    /* Search Box */
    .search-box input {
        border-left: none !important;
        box-shadow: none !important;
    }

        .search-box input:focus {
            border-color: #80bdff;
            box-shadow: 0px 0px 0px 3px rgba(0, 123, 255, .25) !important;
        }

    /* Table Style */
    .modern-table thead {
        background: #f1f3f5;
        border-top-left-radius: 12px;
        border-top-right-radius: 12px;
    }

    .modern-table th {
        font-weight: 600;
        text-transform: uppercase;
        font-size: .75rem;
        color: #495057;
        letter-spacing: .5px;
    }

    .modern-table tbody tr {
        transition: .2s;
    }

        .modern-table tbody tr:hover {
            background: #f8f9fa;
        }
</style>
