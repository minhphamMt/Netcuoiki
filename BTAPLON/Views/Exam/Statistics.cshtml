@model ExamStatisticsViewModel
@{
    ViewData["Title"] = $"Thống kê - {Model.Exam.Title}";
}

<link rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h2 class="fw-bold">
            <i class="fa-solid fa-chart-line text-primary me-1"></i>
            @ViewData["Title"]
        </h2>
        <div class="text-muted">
            <i class="fa-solid fa-chalkboard me-1"></i>
            Lớp: <strong>@Model.Exam.Class?.ClassCode</strong> · @Model.Exam.Class?.Course?.CourseName
        </div>
    </div>

    <a asp-action="Index" class="btn btn-outline-secondary shadow-sm">
        <i class="fa-solid fa-arrow-left me-1"></i>Quay lại
    </a>
</div>

<div class="row g-3 mb-4">

    <div class="col-md-3">
        <div class="card shadow-sm text-center border-0">
            <div class="card-body py-4">
                <div class="text-muted mb-1"><i class="fa-solid fa-users me-1"></i> Tổng sinh viên</div>
                <h2 class="fw-bold text-primary">@Model.TotalStudents</h2>
            </div>
        </div>
    </div>

    <div class="col-md-3">
        <div class="card shadow-sm text-center border-0">
            <div class="card-body py-4">
                <div class="text-muted mb-1"><i class="fa-solid fa-file-arrow-up me-1"></i> Bài đã nộp</div>
                <h2 class="fw-bold text-success">@Model.TotalSubmissions</h2>
            </div>
        </div>
    </div>

    <div class="col-md-3">
        <div class="card shadow-sm text-center border-0">
            <div class="card-body py-4">
                <div class="text-muted mb-1"><i class="fa-solid fa-star me-1"></i> Điểm trung bình</div>
                <h2 class="fw-bold text-warning">@Model.AverageScore</h2>
            </div>
        </div>
    </div>

    <div class="col-md-3">
        <div class="card shadow-sm text-center border-0">
            <div class="card-body py-4">
                <div class="text-muted mb-1"><i class="fa-solid fa-arrow-trend-up me-1"></i> Cao nhất / Thấp nhất</div>
                <h2 class="fw-bold">@Model.HighestScore / @Model.LowestScore</h2>
            </div>
        </div>
    </div>

</div>

<h4 class="fw-bold mb-3">
    <i class="fa-solid fa-chart-simple text-info me-1"></i>
    Phân bố điểm
</h4>

<div class="card shadow-sm border-0" style="max-width:520px;">
    <div class="card-body">
        <table class="table table-hover mb-0">
            <thead class="table-light">
                <tr>
                    <th><i class="fa-solid fa-bullseye me-1"></i> Khoảng điểm</th>
                    <th><i class="fa-solid fa-users-line me-1"></i> Số lượng</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.GradeDistribution)
                {
                    <tr>
                        <td class="fw-semibold">@item.Key</td>
                        <td>
                            <span class="badge bg-primary px-3 py-2">@item.Value</span>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
