@model BTAPLON.Models.Exam
@{
    ViewData["Title"] = "Chỉnh sửa bài kiểm tra";
}

<div class="container mt-4" style="max-width:800px;">
    <h2 class="mb-4">@ViewData["Title"]</h2>

    <form asp-action="Edit" method="post" class="card p-4 shadow-sm">
        @Html.AntiForgeryToken()
        <input type="hidden" asp-for="ExamID" />
        <div class="mb-3">
            <label class="form-label" style="display:none;">Lớp học</label>
            <select asp-for="ClassID" class="form-select" asp-items="ViewBag.ClassID" style="display:none;"></select>
            <span asp-validation-for="ClassID" class="text-danger" style="display:none;"></span>
        </div>


        <div class="mb-3">
            <label class="form-label">Tiêu đề</label>
            <input asp-for="Title" class="form-control" />
            <span asp-validation-for="Title" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label class="form-label">Mô tả</label>
            <textarea asp-for="Description" class="form-control" rows="3"></textarea>
        </div>

        <div class="mb-3">
            <label class="form-label">Thời lượng (phút)</label>
            <input asp-for="DurationMinutes" type="number" class="form-control" />
        </div>

        <div class="mb-3">
            <label class="form-label">Thời gian bắt đầu</label>
            <input asp-for="StartTime" type="datetime-local" class="form-control" />
        </div>

        <div class="form-check mb-3">
            <input asp-for="IsPublished" class="form-check-input" type="checkbox" />
            <label class="form-check-label" for="IsPublished">Mở cho sinh viên</label>
        </div>

        <button type="submit" class="btn btn-primary">Lưu thay đổi</button>
        <a asp-action="Index" class="btn btn-secondary mt-1">Hủy</a>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
