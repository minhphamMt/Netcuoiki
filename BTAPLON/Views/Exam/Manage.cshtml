@model Exam
@{
    ViewData["Title"] = $"Cấu hình đề - {Model.Title}";
    var questionForm = ViewBag.QuestionForm as ExamQuestionFormViewModel ?? new ExamQuestionFormViewModel { ExamID = Model.ExamID };
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <div>
        <h2>@Model.Title</h2>
        <div class="text-muted">Lớp: @Model.Class?.ClassCode - @Model.Class?.Course?.CourseName</div>
        <div class="text-muted">Thời lượng: @Model.DurationMinutes phút</div>
        @if (Model.IsPublished)
        {
            <span class="badge bg-success mt-2">Đang mở cho sinh viên</span>
        }
        else
        {
        <span class="badge bg-secondary mt-2">Chưa mở</span>
        }
    </div>
    <div>
        <a asp-action="Index" class="btn btn-outline-secondary">Quay lại</a>
    </div>
</div>

@if (TempData["Message"] != null)
{
    <div class="alert alert-success">@TempData["Message"]</div>
}
@if (TempData["QuestionError"] != null)
{
    <div class="alert alert-danger">@TempData["QuestionError"]</div>
}

<div class="row">
    <div class="col-lg-6">
        <div class="card mb-4">
            <div class="card-header bg-light">Thêm câu hỏi</div>
            <div class="card-body">
                <form asp-action="AddQuestion" method="post">
                    @Html.AntiForgeryToken()
                    <input type="hidden" name="ExamID" value="@Model.ExamID" />
                    <div class="mb-3">
                        <label class="form-label">Nội dung câu hỏi</label>
                        <textarea name="Prompt" class="form-control" rows="3">@questionForm.Prompt</textarea>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Điểm</label>
                        <input type="number" step="0.5" min="0" name="Points" class="form-control" value="@questionForm.Points" />
                    </div>
                    <div class="form-check form-switch mb-3">
                        @Html.CheckBox("IsMultipleChoice", questionForm.IsMultipleChoice, new { @class = "form-check-input" })
                        <label class="form-check-label" for="IsMultipleChoice">Câu hỏi trắc nghiệm</label>
                    </div>
                    <div class="mb-3">
                        <h6>Phương án trả lời</h6>
                        <p class="text-muted small">Đánh dấu đáp án đúng. Bỏ trống nếu là tự luận.</p>
                        @for (int i = 0; i < questionForm.Choices.Count; i++)
                        {
                            <div class="input-group mb-2">
                                <span class="input-group-text">@(i + 1)</span>
                                <input type="text" name="Choices[@i].Text" value="@questionForm.Choices[i].Text" class="form-control" placeholder="Nội dung đáp án" />
                                <div class="input-group-text">
                                    @Html.CheckBox($"Choices[{i}].IsCorrect", questionForm.Choices[i].IsCorrect, new { @class = "form-check-input mt-0" })
                                </div>
                            </div>
                            
                        }
                    </div>
                    <button type="submit" class="btn btn-primary">Thêm câu hỏi</button>
                </form>
            </div>
        </div>
        <div class="card">
            <div class="card-header bg-light">Mở bài thi</div>
            <div class="card-body">
                <p>Bài thi sẽ mở theo thời gian đã cấu hình. Bạn có thể cập nhật thời gian bên dưới.</p>
                <form asp-action="Publish" asp-route-id="@Model.ExamID" method="post" class="mb-2">
                    @Html.AntiForgeryToken()
                    <div class="row g-2 align-items-end">
                        <div class="col-md-4">
                            <label class="form-label">Thời gian bắt đầu</label>
                            <input class="form-control" type="datetime-local" name="startTime" value="@Model.StartTime?.ToString("yyyy-MM-ddTHH:mm")" />
                        </div>
                        <div class="col-md-2">
                            <label class="form-label">Thời lượng (phút)</label>
                            <input class="form-control" type="number" min="1" max="600" name="durationMinutes" value="@Model.DurationMinutes" />
                        </div>
                        <div class="col-md-4">
                            <label class="form-label">Ngày kết thúc</label>
                            <input class="form-control" type="datetime-local" name="endTime" value="@Model.EndTime?.ToString("yyyy-MM-ddTHH:mm")" />
                            <div class="form-text">Đề sẽ tự đóng khi đến thời gian này.</div>
                        </div>
                        <div class="col-md-2 text-end">
                            <button type="submit" class="btn btn-success mt-3">Mở đề</button>
                        </div>
                    </div>
                </form>
                @if (Model.IsPublished)
                {
                    <form asp-action="Close" asp-route-id="@Model.ExamID" method="post">
                        @Html.AntiForgeryToken()
                        <button type="submit" class="btn btn-warning" onclick="return confirm('Đóng bài thi?')">Đóng bài thi</button>
                    </form>
                }
            </div>
        </div>
    </div>
    <div class="col-lg-6">
        <div class="card">
            <div class="card-header bg-light">Danh sách câu hỏi (@(Model.Questions?.Count ?? 0))</div>
            <div class="card-body">
                @if (Model.Questions == null || !Model.Questions.Any())
                {
                    <div class="alert alert-info">Chưa có câu hỏi nào.</div>
                }
                else
                {
                <div class="accordion" id="questionAccordion">
                    @{
                        var index = 0;
                    }
                    @foreach (var question in Model.Questions.OrderBy(q => q.DisplayOrder))
                    {
                        var collapseId = $"collapse{index}";
                        <div class="accordion-item">
                                <h2 className="accordion-header" id={"heading" + index}>
                            <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#@collapseId">
                                Câu @(index + 1): @question.Prompt
                            </button>
                        </h2>
                        <div id="@collapseId" class="accordion-collapse collapse" data-bs-parent="#questionAccordion">
                            <div class="accordion-body">
                                <div class="d-flex justify-content-between">
                                    <span>Điểm: @question.Points</span>
                                    <form asp-action="DeleteQuestion" asp-route-id="@question.QuestionID" method="post" onsubmit="return confirm('Xoá câu hỏi này?');">
                                        @Html.AntiForgeryToken()
                                        <button type="submit" class="btn btn-sm btn-outline-danger">Xoá</button>
                                    </form>
                                </div>
                                @if (question.IsMultipleChoice)
                                {
                                    <ul class="list-group list-group-flush mt-3">
                                        @foreach (var choice in question.Choices ?? Enumerable.Empty<Choice>())
                                        {
                                            <li class="list-group-item d-flex justify-content-between">
                                                <span>@choice.Text</span>
                                                @if (choice.IsCorrect)
                                                {
                                                    <span class="badge bg-success">Đúng</span>
                                                }
                                            </li>
                                        }
                                    </ul>
                                }
                                else
                                {
                                <p class="mt-3 text-muted">Câu hỏi tự luận.</p>
                                }
                            </div>
                        </div>
                    </div>
                    index++;
                                        }
                </div>
                }
            </div>
        </div>
    </div>
</div>