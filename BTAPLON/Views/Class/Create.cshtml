@model BTAPLON.Models.Class

<h2>Tạo lớp học</h2>

<form asp-action="Create" method="post">
    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="form-group">
        <label>Course</label>
        <select asp-for="CourseID" asp-items="ViewBag.CourseID" class="form-control"></select>
    </div>

    <div class="form-group">
        <label>Class Code</label>
        <input asp-for="ClassCode" class="form-control" />
    </div>

    <div class="form-group">
        <label>Semester</label>
        <input asp-for="Semester" class="form-control" />
    </div>

    <div class="form-group">
        <label>Year</label>
        <input asp-for="Year" class="form-control" />
    </div>

    <button type="submit" class="btn btn-primary">Tạo Lớp</button>
    <a asp-action="Index" class="btn btn-secondary  mt-1">Quay lại</a>

</form>
